---
/**
 * Points Converter Component
 * 
 * Allows TEEN/CHILD users to convert points to money based on task completion.
 * 
 * Props:
 * - userId: User's UUID
 * - currentPoints: Current point balance
 * - userName: User's name (for display)
 * - lang: Language code (en/es)
 * 
 * Conversion rules (based on weekly task completion):
 * - 100% all tasks: 100% of points convertible
 * - 100% default only: 80% convertible
 * - ‚â•80% default: 50% convertible
 * - <80%: Conversion blocked
 * 
 * Split: 85% Checking (spendable), 15% Savings (locked)
 */

import { t } from "../lib/i18n";

interface Props {
    userId: string;
    currentPoints: number;
    userName: string;
    lang?: string;
}

const { userId, currentPoints, userName, lang = "en" } = Astro.props;

// Fetch conversion eligibility from backend
const token = Astro.cookies.get("access_token")?.value;
let eligibility: any = null;
let error: string | null = null;

if (token) {
    try {
        const response = await fetch(
            `${import.meta.env.PUBLIC_API_URL || "http://localhost:8002"}/api/points-conversion/eligibility`,
            {
                headers: {
                    Authorization: `Bearer ${token}`,
                },
            }
        );
        
        if (response.ok) {
            eligibility = await response.json();
        } else {
            const errData = await response.json();
            error = errData.detail || "Failed to load conversion eligibility";
        }
    } catch (err) {
        error = "Could not connect to server";
        console.error("Eligibility fetch error:", err);
    }
}

// If no eligibility data or not eligible, don't show the converter
if (!eligibility || !eligibility.eligible) {
    // Optionally show why not eligible
    if (eligibility && !eligibility.eligible) {
        ---
        <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4 mx-6 mt-4">
            <p class="text-yellow-800 text-sm">
                <strong>üí° {lang === "es" ? "Conversi√≥n bloqueada" : "Conversion blocked"}:</strong>
                {" "}{eligibility.reason}
            </p>
            <p class="text-yellow-700 text-xs mt-2">
                {lang === "es" 
                    ? `Completa ${eligibility.required_total - eligibility.required_completed} tareas m√°s esta semana.`
                    : `Complete ${eligibility.required_total - eligibility.required_completed} more tasks this week.`
                }
            </p>
        </div>
        ---
    }
} else {
    // User is eligible to convert points
    const maxPoints = eligibility.max_convertible_points;
    const maxAmount = eligibility.max_convertible_amount;
    const completionPct = eligibility.completion_percentage;
    const conversionRate = 0.10; // MXN per point
---

<div class="bg-gradient-to-br from-green-50 to-emerald-50 border-2 border-green-300 rounded-2xl p-5 mx-6 mt-4 shadow-md">
    <div class="flex items-center justify-between mb-4">
        <h3 class="text-lg font-bold text-green-900">
            üí∞ {lang === "es" ? "Convertir Puntos a Dinero" : "Convert Points to Money"}
        </h3>
        <div class="bg-green-600 text-white px-3 py-1 rounded-full text-xs font-semibold">
            {completionPct}% {lang === "es" ? "Completado" : "Complete"}
        </div>
    </div>
    
    <div class="bg-white rounded-xl p-4 mb-4">
        <div class="grid grid-cols-2 gap-4 mb-3">
            <div>
                <p class="text-xs text-gray-600 uppercase font-semibold">
                    {lang === "es" ? "Puntos Disponibles" : "Available Points"}
                </p>
                <p class="text-2xl font-bold text-gray-900">{currentPoints}</p>
            </div>
            <div>
                <p class="text-xs text-gray-600 uppercase font-semibold">
                    {lang === "es" ? "M√°x. Convertible" : "Max Convertible"}
                </p>
                <p class="text-2xl font-bold text-green-600">{maxPoints}</p>
            </div>
        </div>
        
        <div class="border-t pt-3">
            <p class="text-xs text-gray-600 mb-1">
                {eligibility.reason}
            </p>
            <div class="flex items-center justify-between text-xs text-gray-700">
                <span>
                    {lang === "es" ? "Tareas:" : "Tasks:"} {eligibility.required_completed}/{eligibility.required_total}
                </span>
                <span>
                    {lang === "es" ? "Bonus:" : "Bonus:"} {eligibility.bonus_completed}/{eligibility.bonus_total}
                </span>
            </div>
        </div>
    </div>
    
    <form id="conversion-form" class="space-y-4">
        <div>
            <label for="points-input" class="block text-sm font-semibold text-gray-700 mb-2">
                {lang === "es" ? "Puntos a Convertir" : "Points to Convert"}
            </label>
            <input
                type="number"
                id="points-input"
                name="points"
                min="1"
                max={maxPoints}
                value={maxPoints}
                class="w-full px-4 py-3 border-2 border-green-300 rounded-xl text-lg font-bold text-center focus:ring-2 focus:ring-green-500 focus:border-green-500"
            />
            <div class="flex justify-between mt-2 text-xs text-gray-600">
                <button
                    type="button"
                    onclick={`document.getElementById('points-input').value = ${Math.floor(maxPoints * 0.25)}`}
                    class="px-2 py-1 bg-gray-200 rounded hover:bg-gray-300"
                >
                    25%
                </button>
                <button
                    type="button"
                    onclick={`document.getElementById('points-input').value = ${Math.floor(maxPoints * 0.50)}`}
                    class="px-2 py-1 bg-gray-200 rounded hover:bg-gray-300"
                >
                    50%
                </button>
                <button
                    type="button"
                    onclick={`document.getElementById('points-input').value = ${Math.floor(maxPoints * 0.75)}`}
                    class="px-2 py-1 bg-gray-200 rounded hover:bg-gray-300"
                >
                    75%
                </button>
                <button
                    type="button"
                    onclick={`document.getElementById('points-input').value = ${maxPoints}`}
                    class="px-2 py-1 bg-green-200 rounded hover:bg-green-300 font-semibold"
                >
                    100%
                </button>
            </div>
        </div>
        
        <div class="bg-gradient-to-r from-green-100 to-emerald-100 rounded-xl p-4 border border-green-300">
            <p class="text-xs text-gray-700 mb-2 font-semibold">
                {lang === "es" ? "Recibir√°s:" : "You'll Receive:"}
            </p>
            <div class="grid grid-cols-2 gap-3">
                <div class="bg-white rounded-lg p-3 border border-green-200">
                    <p class="text-xs text-gray-600 mb-1">
                        üíµ {lang === "es" ? "Para Gastar" : "Spending"} (85%)
                    </p>
                    <p class="text-xl font-bold text-green-700" id="checking-preview">
                        $0.00 MXN
                    </p>
                </div>
                <div class="bg-white rounded-lg p-3 border border-green-200">
                    <p class="text-xs text-gray-600 mb-1">
                        üè¶ {lang === "es" ? "Ahorros" : "Savings"} (15%)
                    </p>
                    <p class="text-xl font-bold text-green-700" id="savings-preview">
                        $0.00 MXN
                    </p>
                </div>
            </div>
            <p class="text-center text-2xl font-extrabold text-green-800 mt-3" id="total-preview">
                $0.00 MXN
            </p>
        </div>
        
        <button
            type="submit"
            id="convert-button"
            class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 rounded-xl shadow-lg transition-all hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed"
        >
            {lang === "es" ? "üí∏ Convertir Ahora" : "üí∏ Convert Now"}
        </button>
        
        <div id="conversion-result" class="hidden"></div>
    </form>
</div>

<script define:vars={{ maxPoints, conversionRate, lang }}>
    const pointsInput = document.getElementById('points-input');
    const checkingPreview = document.getElementById('checking-preview');
    const savingsPreview = document.getElementById('savings-preview');
    const totalPreview = document.getElementById('total-preview');
    const convertButton = document.getElementById('convert-button');
    const conversionResult = document.getElementById('conversion-result');
    const form = document.getElementById('conversion-form');
    
    // Update preview when points change
    function updatePreview() {
        const points = parseInt(pointsInput.value) || 0;
        const total = points * conversionRate;
        const checking = total * 0.85;
        const savings = total * 0.15;
        
        checkingPreview.textContent = `$${checking.toFixed(2)} MXN`;
        savingsPreview.textContent = `$${savings.toFixed(2)} MXN`;
        totalPreview.textContent = `$${total.toFixed(2)} MXN`;
        
        // Validate input
        if (points > maxPoints || points <= 0) {
            convertButton.disabled = true;
        } else {
            convertButton.disabled = false;
        }
    }
    
    pointsInput.addEventListener('input', updatePreview);
    
    // Initialize preview
    updatePreview();
    
    // Handle form submission
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const points = parseInt(pointsInput.value);
        
        if (points <= 0 || points > maxPoints) {
            alert(lang === 'es' 
                ? `Ingresa un valor entre 1 y ${maxPoints} puntos.`
                : `Enter a value between 1 and ${maxPoints} points.`
            );
            return;
        }
        
        // Disable button during request
        convertButton.disabled = true;
        convertButton.textContent = lang === 'es' ? '‚è≥ Procesando...' : '‚è≥ Processing...';
        
        try {
            const response = await fetch('/api/points/convert', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ points }),
            });
            
            const result = await response.json();
            
            if (response.ok && result.success) {
                // Success!
                conversionResult.className = 'bg-green-100 border border-green-300 rounded-xl p-4 mt-4';
                conversionResult.innerHTML = `
                    <p class="text-green-800 font-bold mb-2">
                        ‚úÖ ${lang === 'es' ? '¬°Conversi√≥n Exitosa!' : 'Conversion Successful!'}
                    </p>
                    <p class="text-sm text-green-700">
                        ${lang === 'es' 
                            ? `${result.points_converted} puntos ‚Üí $${result.money_amount.toFixed(2)} MXN`
                            : `${result.points_converted} points ‚Üí $${result.money_amount.toFixed(2)} MXN`
                        }
                    </p>
                    <p class="text-xs text-green-600 mt-2">
                        ${lang === 'es' 
                            ? `üíµ Efectivo: $${result.checking_amount.toFixed(2)} | üè¶ Ahorros: $${result.savings_amount.toFixed(2)}`
                            : `üíµ Spending: $${result.checking_amount.toFixed(2)} | üè¶ Savings: $${result.savings_amount.toFixed(2)}`
                        }
                    </p>
                `;
                conversionResult.classList.remove('hidden');
                
                // Reload page after 2 seconds to show updated balance
                setTimeout(() => {
                    window.location.reload();
                }, 2000);
            } else {
                // Error
                conversionResult.className = 'bg-red-100 border border-red-300 rounded-xl p-4 mt-4';
                conversionResult.innerHTML = `
                    <p class="text-red-800 font-bold">
                        ‚ùå ${lang === 'es' ? 'Error' : 'Error'}
                    </p>
                    <p class="text-sm text-red-700">
                        ${result.detail || result.error || (lang === 'es' ? 'No se pudo completar la conversi√≥n.' : 'Could not complete conversion.')}
                    </p>
                `;
                conversionResult.classList.remove('hidden');
                
                convertButton.disabled = false;
                convertButton.textContent = lang === 'es' ? 'üí∏ Convertir Ahora' : 'üí∏ Convert Now';
            }
        } catch (error) {
            console.error('Conversion error:', error);
            
            conversionResult.className = 'bg-red-100 border border-red-300 rounded-xl p-4 mt-4';
            conversionResult.innerHTML = `
                <p class="text-red-800 font-bold">
                    ‚ùå ${lang === 'es' ? 'Error de Conexi√≥n' : 'Connection Error'}
                </p>
                <p class="text-sm text-red-700">
                    ${lang === 'es' ? 'No se pudo conectar al servidor.' : 'Could not connect to server.'}
                </p>
            `;
            conversionResult.classList.remove('hidden');
            
            convertButton.disabled = false;
            convertButton.textContent = lang === 'es' ? 'üí∏ Convertir Ahora' : 'üí∏ Convert Now';
        }
    });
</script>

