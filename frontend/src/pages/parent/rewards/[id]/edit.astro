---
import Layout from "../../../../layouts/Layout.astro";
import BottomNav from "../../../../components/BottomNav.astro";
import { apiFetch } from "../../../../lib/api";
import { t } from "../../../../lib/i18n";

const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");
const lang = Astro.cookies.get("lang")?.value ?? "en";

const { data: user } = await apiFetch<any>("/api/auth/me", { token });
if (!user) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}
if (user.role !== "parent") return Astro.redirect("/dashboard");

const { id } = Astro.params;
let errorMsg = "";

if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const payload: any = {
        name: data.get("name"),
        description: data.get("description") || null,
        points_cost: Number(data.get("points_cost")) || 50,
    };
    const category = data.get("category");
    if (category) payload.category = category;
    const { ok, error } = await apiFetch(`/api/rewards/${id}`, {
        method: "PUT",
        token,
        body: JSON.stringify(payload),
    });
    if (ok) {
        return Astro.redirect("/parent/rewards");
    } else {
        errorMsg = error || "Error";
    }
}

const { data: reward } = await apiFetch<any>(`/api/rewards/${id}`, { token });
if (!reward) return Astro.redirect("/parent/rewards");
---

<Layout title={`${t(lang, "pr_edit_title")} - Family Task Manager`}>
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto min-h-screen bg-slate-50 flex flex-col pb-24">
        <header
            class="bg-gradient-to-br from-amber-600 to-orange-500 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md"
        >
            <a
                href="/parent/rewards"
                class="text-amber-200 text-sm flex items-center gap-1 mb-3"
            >
                <svg
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
                {t(lang, "back_all_rewards")}
            </a>
            <h1 class="text-2xl font-bold">{t(lang, "pr_edit_title")}</h1>
        </header>
        <main class="flex-1 px-4 py-6">
            {
                errorMsg && (
                    <div class="mb-4 p-3 bg-red-50 border border-red-200 text-red-700 text-sm rounded-xl">
                        {errorMsg}
                    </div>
                )
            }
            <form
                method="POST"
                class="bg-white rounded-2xl p-5 shadow-sm border border-slate-100 space-y-4"
            >
                <div>
                    <label class="text-sm font-medium text-slate-700 mb-1 block"
                        >{t(lang, "pr_name")}</label
                    >
                    <input
                        name="name"
                        required
                        value={reward.name}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-amber-500 outline-none"
                    />
                </div>
                <div>
                    <label class="text-sm font-medium text-slate-700 mb-1 block"
                        >{t(lang, "pt_description")}</label
                    >
                    <textarea
                        name="description"
                        rows={3}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-amber-500 outline-none resize-none"
                        >{reward.description}</textarea
                    >
                </div>
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <label
                            class="text-sm font-medium text-slate-700 mb-1 block"
                            >{t(lang, "pr_point_cost")}</label
                        >
                        <input
                            type="number"
                            name="points_cost"
                            min={1}
                            value={reward.points_cost}
                            class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-amber-500 outline-none"
                        />
                    </div>
                    <div>
                        <label
                            class="text-sm font-medium text-slate-700 mb-1 block"
                            >{t(lang, "pr_category")}</label
                        >
                        <select
                            name="category"
                            class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-amber-500 outline-none bg-white"
                        >
                            <option value="">{t(lang, "pr_none_cat")}</option>
                            <option
                                value="SCREEN_TIME"
                                selected={reward.category === "SCREEN_TIME"}
                                >{t(lang, "pr_cat_screen_time")}</option
                            >
                            <option
                                value="FOOD"
                                selected={reward.category === "FOOD"}
                                >{t(lang, "pr_cat_food")}</option
                            >
                            <option
                                value="ACTIVITY"
                                selected={reward.category === "ACTIVITY"}
                                >{t(lang, "pr_cat_activity")}</option
                            >
                            <option
                                value="PRIVILEGE"
                                selected={reward.category === "PRIVILEGE"}
                                >{t(lang, "pr_cat_privilege")}</option
                            >
                            <option
                                value="ITEM"
                                selected={reward.category === "ITEM"}
                                >{t(lang, "pr_cat_item")}</option
                            >
                        </select>
                    </div>
                </div>
                <button
                    type="submit"
                    class="w-full py-2.5 bg-amber-500 hover:bg-amber-600 text-white font-semibold text-sm rounded-lg transition-colors shadow-sm"
                >
                    {t(lang, "pt_save")}
                </button>
            </form>
        </main>
        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>
</Layout>
