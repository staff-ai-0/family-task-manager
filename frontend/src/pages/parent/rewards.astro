---
import BottomSpacer from "@components/BottomSpacer.astro";
import Layout from "../../layouts/Layout.astro";
import BottomNav from "../../components/BottomNav.astro";
import { apiFetch } from "../../lib/api";
import { t } from "../../lib/i18n";

const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");
const lang = Astro.cookies.get("lang")?.value ?? "en";

const { data: user } = await apiFetch<any>("/api/auth/me", { token });
if (!user) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}
if (user.role !== "parent") return Astro.redirect("/dashboard");

let successMsg = "";
let errorMsg = "";

if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const action = data.get("action");

    if (action === "create") {
        const payload: any = {
            name: data.get("name"),
            description: data.get("description") || null,
            points_cost: Number(data.get("points_cost")) || 50,
        };
        const category = data.get("category");
        if (category) payload.category = category;
        const { ok, error } = await apiFetch("/api/rewards/", {
            method: "POST",
            token,
            body: JSON.stringify(payload),
        });
        if (ok) {
            successMsg = t(lang, "pr_created");
        } else {
            errorMsg = error || "Error";
        }
    }
    if (action === "delete") {
        const rewardId = data.get("reward_id");
        const { ok, error } = await apiFetch(`/api/rewards/${rewardId}`, {
            method: "DELETE",
            token,
        });
        if (ok) {
            successMsg = t(lang, "pr_deleted");
        } else {
            errorMsg = error || "Error";
        }
    }
}

const { data: rewardsRaw } = await apiFetch<any[]>(
    "/api/rewards?is_active=true",
    { token },
);
const rewards: any[] = Array.isArray(rewardsRaw) ? rewardsRaw : [];
---
import BottomSpacer from "@components/BottomSpacer.astro";

<Layout title={`${t(lang, "pr_title")} - Family Task Manager`}>
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto  bg-slate-50 flex flex-col ">
        <header
            class="bg-gradient-to-br from-amber-600 to-orange-500 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md"
        >
            <a
                href="/parent"
                class="text-amber-200 text-sm flex items-center gap-1 mb-3"
            >
                <svg
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
                {t(lang, "back_parent")}
            </a>
            <h1 class="text-2xl font-bold">{t(lang, "pr_title")}</h1>
            <p class="text-amber-100 text-sm mt-1">
                {t(lang, "pr_active_rewards")(rewards.length)}
            </p>
        </header>

        <main class="flex-1 px-4 py-6 space-y-6">
            {
                successMsg && (
                    <div class="p-3 bg-green-50 border border-green-200 text-green-700 text-sm rounded-xl">
                        {successMsg}
                    </div>
                )
            }
            {
                errorMsg && (
                    <div class="p-3 bg-red-50 border border-red-200 text-red-700 text-sm rounded-xl">
                        {errorMsg}
                    </div>
                )
            }

            <section
                class="bg-white rounded-2xl p-5 shadow-sm border border-slate-100"
            >
                <h2 class="font-bold text-slate-800 mb-4">
                    {t(lang, "pr_create_title")}
                </h2>
                <form method="POST" class="space-y-3">
                    <input type="hidden" name="action" value="create" />
                    <input
                        name="name"
                        required
                        placeholder={t(lang, "pr_name")}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-amber-500 outline-none"
                    />
                    <textarea
                        name="description"
                        placeholder={t(lang, "pt_description")}
                        rows={2}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-amber-500 outline-none resize-none"
                    ></textarea>
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label
                                class="text-xs font-medium text-slate-600 mb-1 block"
                                >{t(lang, "pr_point_cost")}</label
                            >
                            <input
                                type="number"
                                name="points_cost"
                                min={1}
                                value={50}
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-amber-500 outline-none"
                            />
                        </div>
                        <div>
                            <label
                                class="text-xs font-medium text-slate-600 mb-1 block"
                                >{t(lang, "pr_category")}</label
                            >
                            <select
                                name="category"
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-amber-500 outline-none bg-white"
                            >
                                <option value=""
                                    >{t(lang, "pr_none_cat")}</option
                                >
                                <option value="SCREEN_TIME">{t(lang, "pr_cat_screen_time")}</option>
                                <option value="FOOD">{t(lang, "pr_cat_food")}</option>
                                <option value="ACTIVITY">{t(lang, "pr_cat_activity")}</option>
                                <option value="PRIVILEGE">{t(lang, "pr_cat_privilege")}</option>
                                <option value="ITEM">{t(lang, "pr_cat_item")}</option>
                            </select>
                        </div>
                    </div>
                    <button
                        type="submit"
                        class="w-full py-2.5 bg-amber-500 hover:bg-amber-600 text-white font-semibold text-sm rounded-lg transition-colors shadow-sm"
                    >
                        {t(lang, "pr_create_btn")}
                    </button>
                </form>
            </section>

            <section>
                <h2 class="font-bold text-slate-800 mb-3 px-1">
                    {t(lang, "pr_list_title")}
                </h2>
                <div class="space-y-3">
                    {
                        rewards.length === 0 ? (
                            <p class="text-slate-500 text-sm text-center py-6">
                                {t(lang, "pr_none")}
                            </p>
                        ) : (
                            rewards.map((reward: any) => (
                                <div class="bg-white rounded-2xl p-4 shadow-sm border border-slate-100 flex items-center gap-3">
                                    <div class="flex-1">
                                        <h3 class="font-bold text-slate-800 text-sm">
                                            {reward.name}
                                        </h3>
                                        {reward.description && (
                                            <p class="text-xs text-slate-500 line-clamp-1 mt-0.5">
                                                {reward.description}
                                            </p>
                                        )}
                                        <p class="text-xs text-amber-600 font-semibold mt-1">
                                            {reward.points_cost} pts
                                        </p>
                                    </div>
                                    <div class="flex gap-2">
                                        <a
                                            href={`/parent/rewards/${reward.id}/edit`}
                                            class="h-8 w-8 rounded-lg bg-slate-100 hover:bg-amber-100 text-slate-500 hover:text-amber-600 flex items-center justify-center transition-colors"
                                        >
                                            <svg
                                                class="h-4 w-4"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                                                />
                                            </svg>
                                        </a>
                                        <form method="POST">
                                            <input
                                                type="hidden"
                                                name="action"
                                                value="delete"
                                            />
                                            <input
                                                type="hidden"
                                                name="reward_id"
                                                value={reward.id}
                                            />
                                            <button
                                                type="submit"
                                                onclick={`return confirm('${t(lang, "confirm_delete")}')`}
                                                class="h-8 w-8 rounded-lg bg-slate-100 hover:bg-red-100 text-slate-500 hover:text-red-500 flex items-center justify-center transition-colors"
                                            >
                                                <svg
                                                    class="h-4 w-4"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                                    />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            ))
                        )
                    }
                </div>
            </section>
        </main>
<BottomSpacer />
        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>
</Layout>
