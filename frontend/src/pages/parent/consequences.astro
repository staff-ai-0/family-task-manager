---
import Layout from "../../layouts/Layout.astro";
import BottomNav from "../../components/BottomNav.astro";
import { apiFetch } from "../../lib/api";
import { t } from "../../lib/i18n";

const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");
const lang = Astro.cookies.get("lang")?.value ?? "en";

const { data: user } = await apiFetch<any>("/api/auth/me", { token });
if (!user) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}
if (user.role !== "parent") return Astro.redirect("/dashboard");

let successMsg = "";
let errorMsg = "";

if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const action = data.get("action");

    if (action === "create") {
        const payload: any = {
            title: data.get("title"),
            description: data.get("description") || null,
            user_id: data.get("user_id"),
        };
        const dueDate = data.get("due_date");
        if (dueDate) payload.due_date = dueDate;
        const { ok, error } = await apiFetch("/api/consequences/", {
            method: "POST",
            token,
            body: JSON.stringify(payload),
        });
        if (ok) {
            successMsg = t(lang, "pc_created");
        } else {
            errorMsg = error || "Error";
        }
    }
    if (action === "resolve") {
        const consequenceId = data.get("consequence_id");
        const { ok, error } = await apiFetch(
            `/api/consequences/${consequenceId}/resolve`,
            { method: "POST", token },
        );
        if (ok) {
            successMsg = t(lang, "pc_resolved_flash");
        } else {
            errorMsg = error || "Error";
        }
    }
    if (action === "delete") {
        const consequenceId = data.get("consequence_id");
        const { ok, error } = await apiFetch(
            `/api/consequences/${consequenceId}`,
            { method: "DELETE", token },
        );
        if (ok) {
            successMsg = t(lang, "pc_deleted");
        } else {
            errorMsg = error || "Error";
        }
    }
}

const [{ data: consequencesRaw }, { data: family }] = await Promise.all([
    apiFetch<any[]>("/api/consequences", { token }),
    apiFetch<any>("/api/families/me", { token }),
]);
const consequences: any[] = Array.isArray(consequencesRaw)
    ? consequencesRaw
    : [];
const members: any[] = family?.members ?? [];
---

<Layout title={`${t(lang, "pc_title")} - Family Task Manager`}>
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto min-h-screen bg-slate-50 flex flex-col pb-24">
        <header
            class="bg-gradient-to-br from-rose-700 to-red-600 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md"
        >
            <a
                href="/parent"
                class="text-rose-200 text-sm flex items-center gap-1 mb-3"
            >
                <svg
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
                {t(lang, "back_parent")}
            </a>
            <h1 class="text-2xl font-bold">{t(lang, "pc_title")}</h1>
            <p class="text-rose-200 text-sm mt-1">
                {(t(lang, "pc_total_count") as Function)(consequences.length)}
            </p>
        </header>

        <main class="flex-1 px-4 py-6 space-y-6">
            {
                successMsg && (
                    <div class="p-3 bg-green-50 border border-green-200 text-green-700 text-sm rounded-xl">
                        {successMsg}
                    </div>
                )
            }
            {
                errorMsg && (
                    <div class="p-3 bg-red-50 border border-red-200 text-red-700 text-sm rounded-xl">
                        {errorMsg}
                    </div>
                )
            }

            <section
                class="bg-white rounded-2xl p-5 shadow-sm border border-slate-100"
            >
                <h2 class="font-bold text-slate-800 mb-4">
                    {t(lang, "pc_create_title")}
                </h2>
                <form method="POST" class="space-y-3">
                    <input type="hidden" name="action" value="create" />
                    <input
                        name="title"
                        required
                        placeholder={t(lang, "pc_consequence_title")}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-rose-500 outline-none"
                    />
                    <textarea
                        name="description"
                        placeholder={t(lang, "pt_description")}
                        rows={2}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-rose-500 outline-none resize-none"
                    ></textarea>
                    <div class="grid grid-cols-2 gap-3">
                        {
                            members.length > 0 && (
                                <div>
                                    <label class="text-xs font-medium text-slate-600 mb-1 block">
                                        {t(lang, "pc_assign_to")}
                                    </label>
                                    <select
                                        name="user_id"
                                        required
                                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-rose-500 outline-none bg-white"
                                    >
                                        <option value="">
                                            {t(lang, "pc_select_member")}
                                        </option>
                                        {members
                                            .filter(
                                                (m: any) =>
                                                    m.role === "child" ||
                                                    m.role === "teen",
                                            )
                                            .map((m: any) => (
                                                <option value={m.id}>
                                                    {m.name}
                                                </option>
                                            ))}
                                    </select>
                                </div>
                            )
                        }
                        <div>
                            <label
                                class="text-xs font-medium text-slate-600 mb-1 block"
                                >{t(lang, "pt_due_date")}</label
                            >
                            <input
                                type="date"
                                name="due_date"
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-rose-500 outline-none"
                            />
                        </div>
                    </div>
                    <button
                        type="submit"
                        class="w-full py-2.5 bg-rose-600 hover:bg-rose-700 text-white font-semibold text-sm rounded-lg transition-colors shadow-sm"
                    >
                        {t(lang, "pc_create_btn")}
                    </button>
                </form>
            </section>

            <section>
                <h2 class="font-bold text-slate-800 mb-3 px-1">
                    {t(lang, "pc_list_title")}
                </h2>
                <div class="space-y-3">
                    {
                        consequences.length === 0 ? (
                            <p class="text-slate-500 text-sm text-center py-6">
                                {t(lang, "pc_none")}
                            </p>
                        ) : (
                            consequences.map((c: any) => (
                                <div
                                    class={`bg-white rounded-2xl p-4 shadow-sm border ${c.resolved_at ? "opacity-60 border-slate-100" : "border-rose-100"}`}
                                >
                                    <div class="flex items-start justify-between gap-3">
                                        <div class="flex-1">
                                            <div class="flex items-center gap-2 mb-0.5">
                                                <h3 class="font-bold text-slate-800 text-sm">
                                                    {c.title}
                                                </h3>
                                                {c.resolved_at ? (
                                                    <span class="text-xs font-semibold px-2 py-0.5 rounded-full bg-green-100 text-green-700">
                                                        {t(lang, "pc_resolved")}
                                                    </span>
                                                ) : (
                                                    <span class="text-xs font-semibold px-2 py-0.5 rounded-full bg-rose-100 text-rose-700">
                                                        {t(lang, "pc_active")}
                                                    </span>
                                                )}
                                            </div>
                                            {c.description && (
                                                <p class="text-xs text-slate-500 line-clamp-1">
                                                    {c.description}
                                                </p>
                                            )}
                                            {c.due_date && (
                                                <p class="text-xs text-slate-400 mt-1">
                                                    {t(lang, "pc_until")}{" "}
                                                    {new Date(
                                                        c.due_date,
                                                    ).toLocaleDateString()}
                                                </p>
                                            )}
                                        </div>
                                        <div class="flex flex-col gap-1.5">
                                            {!c.resolved_at && (
                                                <form method="POST">
                                                    <input
                                                        type="hidden"
                                                        name="action"
                                                        value="resolve"
                                                    />
                                                    <input
                                                        type="hidden"
                                                        name="consequence_id"
                                                        value={c.id}
                                                    />
                                                    <button
                                                        type="submit"
                                                        class="h-7 px-2 rounded-lg bg-green-100 hover:bg-green-200 text-green-700 text-xs font-semibold transition-colors"
                                                    >
                                                        {t(
                                                            lang,
                                                            "pc_resolve_btn",
                                                        )}
                                                    </button>
                                                </form>
                                            )}
                                            <form method="POST">
                                                <input
                                                    type="hidden"
                                                    name="action"
                                                    value="delete"
                                                />
                                                <input
                                                    type="hidden"
                                                    name="consequence_id"
                                                    value={c.id}
                                                />
                                                <button
                                                    type="submit"
                                                    onclick={`return confirm('${t(lang, "confirm_delete")}')`}
                                                    class="h-7 w-7 rounded-lg bg-slate-100 hover:bg-red-100 text-slate-400 hover:text-red-500 flex items-center justify-center transition-colors"
                                                >
                                                    <svg
                                                        class="h-3.5 w-3.5"
                                                        fill="none"
                                                        viewBox="0 0 24 24"
                                                        stroke="currentColor"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                                        />
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            ))
                        )
                    }
                </div>
            </section>
        </main>

        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>
</Layout>
