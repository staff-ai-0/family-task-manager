---
import Layout from "../../layouts/Layout.astro";
import BottomNav from "../../components/BottomNav.astro";
import { apiFetch } from "../../lib/api";
import { t } from "../../lib/i18n";

const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");
const lang = Astro.cookies.get("lang")?.value ?? "en";

const { data: user } = await apiFetch<any>("/api/auth/me", { token });
if (!user) {
  Astro.cookies.delete("access_token", { path: "/" });
  return Astro.redirect("/login");
}
if (user.role !== "parent") return Astro.redirect("/dashboard");

let successMsg = "";
let errorMsg = "";

if (Astro.request.method === "POST") {
  const data = await Astro.request.formData();
  const action = data.get("action");

  if (action === "toggle_active") {
    const memberId = data.get("member_id");
    const isActive = data.get("is_active") === "true";
    const endpoint = isActive ? "deactivate" : "activate";
    const { ok, error } = await apiFetch(`/api/users/${memberId}/${endpoint}`, {
      method: "PUT",
      token,
    });
    if (!ok) errorMsg = error || "Error";
  }
  if (action === "delete") {
    const memberId = data.get("member_id");
    const { ok, error } = await apiFetch(`/api/users/${memberId}`, {
      method: "DELETE",
      token,
    });
    if (ok) {
      successMsg = t(lang, "pm_deleted");
    } else {
      errorMsg = error || "Error";
    }
  }
  if (action === "adjust_points") {
    const memberId = data.get("member_id");
    const points = Number(data.get("points"));
    const reason = data.get("reason")?.toString();
    
    // Validate required fields
    if (!reason || reason.trim() === "") {
      errorMsg = "Reason is required for point adjustment";
    } else {
      const { ok, error } = await apiFetch(`/api/users/points/adjust`, {
        method: "POST",
        token,
        body: JSON.stringify({ 
          user_id: memberId, 
          points, 
          reason 
        }),
      });
      if (ok) {
        successMsg = t(lang, "pm_points_adjusted");
      } else {
        errorMsg = error || "Error";
      }
    }
  }
  if (action === "register") {
    const role = data.get("role")?.toString() || "child";
    const payload = {
      name: data.get("name"),
      email: data.get("email"),
      password: data.get("password"),
      role: role,
      family_id: user.family_id, // Use the current user's family_id
    };
    const { ok, error } = await apiFetch("/api/auth/register", {
      method: "POST",
      token,
      body: JSON.stringify(payload),
    });
    if (ok) {
      successMsg = t(lang, "pm_registered");
    } else {
      // Handle Pydantic validation errors (array of objects) or simple string errors
      if (typeof error === 'string') {
        errorMsg = error;
      } else {
        errorMsg = "Registration failed. Please check all fields.";
      }
    }
  }
  if (action === "generate_join_code") {
    const { ok, data: codeData, error } = await apiFetch<any>("/api/families/join-code/generate", {
      method: "POST",
      token,
    });
    if (ok && codeData) {
      successMsg = lang === "es" 
        ? `Codigo de familia generado: ${codeData.join_code}` 
        : `Family code generated: ${codeData.join_code}`;
    } else {
      errorMsg = error || "Error generating join code";
    }
  }
}

const { data: family } = await apiFetch<any>("/api/families/me", { token });
const members: any[] = family?.members ?? [];

// Fetch join code
const { data: joinCodeData } = await apiFetch<any>("/api/families/join-code/current", { token });
const joinCode: string | null = joinCodeData?.join_code ?? null;
---

<Layout title={`${t(lang, "pm_title")} - Family Task Manager`}>
  <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto min-h-screen bg-slate-50 flex flex-col pb-24">
    <header
      class="bg-gradient-to-br from-violet-700 to-violet-600 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md"
    >
      <a
        href="/parent"
        class="text-violet-200 text-sm flex items-center gap-1 mb-3"
      >
        <svg
          class="h-4 w-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 19l-7-7 7-7"></path>
        </svg>
        {t(lang, "back_parent")}
      </a>
      <h1 class="text-2xl font-bold">{t(lang, "pm_title")}</h1>
      <p class="text-violet-200 text-sm mt-1">
        {t(lang, "parent_members_count")(members.length)}
      </p>
    </header>

    <main class="flex-1 px-4 py-6 space-y-5">
      {
        successMsg && (
          <div class="p-3 bg-green-50 border border-green-200 text-green-700 text-sm rounded-xl">
            {successMsg}
          </div>
        )
      }
      {
        errorMsg && (
          <div class="p-3 bg-red-50 border border-red-200 text-red-700 text-sm rounded-xl">
            {errorMsg}
          </div>
        )
      }

      <!-- Family Join Code Section -->
      <section class="bg-white rounded-2xl p-5 shadow-sm border border-indigo-100">
        <div class="flex items-center gap-2 mb-3">
          <svg class="h-5 w-5 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
          </svg>
          <h2 class="font-bold text-slate-800">
            {lang === "es" ? "Codigo de Familia" : "Family Join Code"}
          </h2>
        </div>
        <p class="text-xs text-slate-500 mb-3">
          {lang === "es" 
            ? "Comparte este codigo con miembros de tu familia para que se unan usando Google Sign-In." 
            : "Share this code with family members so they can join using Google Sign-In."}
        </p>
        {joinCode ? (
          <div class="flex items-center gap-3">
            <div class="flex-1 bg-indigo-50 border border-indigo-200 rounded-lg px-4 py-3 text-center">
              <span id="join-code-display" class="font-mono text-2xl font-bold tracking-[0.3em] text-indigo-700">{joinCode}</span>
            </div>
            <button 
              id="copy-code-btn"
              type="button"
              class="px-3 py-3 rounded-lg bg-indigo-100 text-indigo-700 hover:bg-indigo-200 transition-colors"
              title={lang === "es" ? "Copiar" : "Copy"}
            >
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </button>
            <form method="POST" class="inline-flex">
              <input type="hidden" name="action" value="generate_join_code" />
              <button 
                type="submit"
                class="px-3 py-3 rounded-lg bg-slate-100 text-slate-600 hover:bg-slate-200 transition-colors"
                title={lang === "es" ? "Regenerar" : "Regenerate"}
              >
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
              </button>
            </form>
          </div>
        ) : (
          <form method="POST">
            <input type="hidden" name="action" value="generate_join_code" />
            <button 
              type="submit"
              class="w-full py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold text-sm rounded-lg transition-colors shadow-sm"
            >
              {lang === "es" ? "Generar Codigo de Familia" : "Generate Family Code"}
            </button>
          </form>
        )}
      </section>

      {
        members.map((m: any) => (
          <div
            class={`bg-white rounded-2xl p-5 shadow-sm border ${m.is_active === false ? "opacity-50 border-slate-100" : "border-slate-100"}`}
          >
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 rounded-full bg-violet-100 flex items-center justify-center text-violet-700 font-bold">
                {m.name.charAt(0).toUpperCase()}
              </div>
              <div class="flex-1">
                <p class="font-bold text-slate-800 text-sm">{m.name}</p>
                <p class="text-xs text-slate-400">
                  {m.role} · {m.email}
                </p>
              </div>
              <span class="text-sm font-bold text-amber-600">
                {m.points ?? 0} pts
              </span>
            </div>

            <div class="flex gap-2 flex-wrap">
              <form method="POST" class="inline-flex">
                <input type="hidden" name="action" value="toggle_active" />
                <input type="hidden" name="member_id" value={m.id} />
                <input
                  type="hidden"
                  name="is_active"
                  value={String(m.is_active !== false)}
                />
                <button
                  type="submit"
                  class={`px-3 py-1.5 rounded-lg text-xs font-semibold transition-colors ${m.is_active === false ? "bg-green-100 text-green-700 hover:bg-green-200" : "bg-rose-100 text-rose-700 hover:bg-rose-200"}`}
                >
                  {m.is_active === false
                    ? t(lang, "pm_activate")
                    : t(lang, "pm_deactivate")}
                </button>
              </form>
              
              <form method="POST" class="inline-flex" onsubmit="return confirm('¿Estás seguro de que quieres eliminar permanentemente a este miembro? Esta acción NO se puede deshacer y eliminará todas sus tareas, puntos e historial.');">
                <input type="hidden" name="action" value="delete" />
                <input type="hidden" name="member_id" value={m.id} />
                <button
                  type="submit"
                  class="px-3 py-1.5 rounded-lg text-xs font-semibold transition-colors bg-red-600 text-white hover:bg-red-700"
                >
                  {t(lang, "pm_delete")}
                </button>
              </form>
            </div>

            <form method="POST" class="mt-3 flex gap-2">
              <input type="hidden" name="action" value="adjust_points" />
              <input type="hidden" name="member_id" value={m.id} />
              <div class="flex-1 flex gap-2">
                <input
                  type="number"
                  name="points"
                  placeholder={t(lang, "pm_pts_placeholder")}
                  required
                  class="w-20 px-2 py-1.5 rounded-lg border border-slate-300 text-xs focus:ring-1 focus:ring-violet-500 outline-none"
                />
                <input
                  name="reason"
                  placeholder={t(lang, "pm_reason_placeholder")}
                  required
                  class="flex-1 px-2 py-1.5 rounded-lg border border-slate-300 text-xs focus:ring-1 focus:ring-violet-500 outline-none"
                />
                <button
                  type="submit"
                  class="px-3 py-1.5 rounded-lg bg-violet-100 text-violet-700 hover:bg-violet-200 text-xs font-semibold transition-colors"
                >
                  {t(lang, "pm_apply")}
                </button>
              </div>
            </form>
          </div>
        ))
      }

      <section
        class="bg-white rounded-2xl p-5 shadow-sm border border-slate-100"
      >
        <h2 class="font-bold text-slate-800 mb-4">
          {t(lang, "pm_register_title")}
        </h2>
        <form method="POST" class="space-y-3">
          <input type="hidden" name="action" value="register" />
          <input
            name="name"
            required
            placeholder={t(lang, "pm_name")}
            class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-violet-500 outline-none"
          />
          <input
            type="email"
            name="email"
            required
            placeholder={t(lang, "pm_email")}
            class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-violet-500 outline-none"
          />
          <input
            type="password"
            name="password"
            required
            minlength={8}
            placeholder={t(lang, "pm_password")}
            class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-violet-500 outline-none"
          />
          <select
            name="role"
            required
            class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-violet-500 outline-none bg-white"
          >
            <option value="child">{t(lang, "pm_role_child")}</option>
            <option value="teen">{t(lang, "pm_role_teen")}</option>
            <option value="parent">{t(lang, "pm_role_parent")}</option>
          </select>
          <button
            type="submit"
            class="w-full py-2.5 bg-violet-600 hover:bg-violet-700 text-white font-semibold text-sm rounded-lg transition-colors shadow-sm"
          >
            {t(lang, "pm_register_btn")}
          </button>
        </form>
      </section>
    </main>

    <BottomNav active="parent" role={user.role} lang={lang} />
  </div>

  <script>
    document.getElementById('copy-code-btn')?.addEventListener('click', () => {
      const code = document.getElementById('join-code-display')?.textContent?.trim();
      if (code) {
        navigator.clipboard.writeText(code).then(() => {
          const btn = document.getElementById('copy-code-btn');
          if (btn) {
            btn.innerHTML = '<svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>';
            setTimeout(() => {
              btn.innerHTML = '<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>';
            }, 2000);
          }
        });
      }
    });
  </script>
</Layout>
