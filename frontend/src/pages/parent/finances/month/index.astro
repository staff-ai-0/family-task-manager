/**
 * Redirect to current month budget view
 * Handles direct access to /parent/finances/month by redirecting to current month
 */

// Redirect to current month
const now = new Date();
const currentYear = now.getFullYear();
const currentMonth = now.getMonth() + 1;

export const prerender = false;

return Astro.redirect(`/parent/finances/month/${currentYear}/${currentMonth}`);
