---
/**
 * Monthly Budget View Page
 * Shows budget allocations, spending, and available amounts for a specific month
 * Supports inline editing (click budgeted amount to edit in place) and category transfers
 */

import Layout from "@layouts/Layout.astro";
import BottomNav from "@components/BottomNav.astro";
import BudgetNav from "@components/BudgetNav.astro";
import BudgetHeader from "@components/BudgetHeader.astro";
import BudgetMonthNav from "@components/BudgetMonthNav.astro";
import BudgetSummaryCards from "@components/BudgetSummaryCards.astro";
import BudgetCategoryGroup from "@components/BudgetCategoryGroup.astro";
import AssignFundsModal from "@components/AssignFundsModal.astro";
import { apiFetch } from "@lib/api";
import { getMonthBudget, getCategoryGroups, formatCurrency, getMonthName } from "@lib/api/budget";
import type { MonthBudgetView } from "@lib/api/budget";
import { t } from "@lib/i18n";

// Authentication check
const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");

const lang = Astro.cookies.get("lang")?.value ?? "en";

// Get user info
const { data: user, ok: userOk } = await apiFetch<any>("/api/auth/me", { token });
if (!userOk) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}

// Only parents can view budget
if (user.role !== "parent") {
    return Astro.redirect("/dashboard");
}

// Get month parameters from URL
const { year, month } = Astro.params;
const yearNum = parseInt(year || "0");
const monthNum = parseInt(month || "0");

// Validate parameters
if (isNaN(yearNum) || isNaN(monthNum) || monthNum < 1 || monthNum > 12) {
    return Astro.redirect("/parent/finances");
}

// Fetch budget data and category groups (for transfer dropdown)
const [
    { data: budget, ok: budgetOk, error },
    { data: allGroups }
] = await Promise.all([
    getMonthBudget(token, yearNum, monthNum),
    getCategoryGroups(token),
]);

if (!budgetOk || !budget) {
    console.error("Failed to fetch budget:", error);
}

const monthName = getMonthName(monthNum, lang);

// Calculate total income and expenses
const incomeGroups = budget?.category_groups.filter(g => g.is_income) || [];
const expenseGroups = budget?.category_groups.filter(g => !g.is_income) || [];

const totalIncome = budget?.totals?.income ?? incomeGroups.reduce((sum, g) => sum + g.total_activity, 0);
const totalBudgeted = expenseGroups.reduce((sum, g) => sum + g.total_budgeted, 0);
const totalSpent = Math.abs(expenseGroups.reduce((sum, g) => sum + g.total_activity, 0));
const readyToAssign = budget?.ready_to_assign !== undefined ? budget.ready_to_assign : (totalIncome - totalBudgeted);

// Navigation helpers
const prevMonth = monthNum === 1 ? 12 : monthNum - 1;
const prevYear = monthNum === 1 ? yearNum - 1 : yearNum;
const nextMonth = monthNum === 12 ? 1 : monthNum + 1;
const nextYear = monthNum === 12 ? yearNum + 1 : yearNum;

const now = new Date();
const isCurrentMonth = yearNum === now.getFullYear() && monthNum === now.getMonth() + 1;

// Flatten all expense categories for the transfer dropdown
const allExpenseCategories = (allGroups || [])
    .filter(g => !g.is_income)
    .flatMap(g => g.categories.map(c => ({ id: c.id, name: c.name, groupName: g.name })));
---

<Layout title={`${monthName} ${yearNum} - ${t(lang, 'fin_budgeted')}`}>
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto  bg-slate-50 flex flex-col ">
        <!-- Header with Month Navigation -->
        <BudgetHeader title={t(lang, 'fin_budgeted')}>
            <BudgetMonthNav 
                year={yearNum}
                month={monthNum}
                readyToAssign={readyToAssign}
                lang={lang}
                t={t}
                formatCurrency={formatCurrency}
                baseRoute="/parent/finances/month"
            />
        </BudgetHeader>

        <!-- Budget Section Nav -->
        <BudgetNav active="month" year={yearNum} month={monthNum} />

        <!-- Summary Cards -->
        <BudgetSummaryCards 
            income={totalIncome}
            budgeted={totalBudgeted}
            spent={totalSpent}
            lang={lang}
            t={t}
            formatCurrency={formatCurrency}
        />

        <!-- Quick Actions with Assign Funds Button -->
        <div class="px-6 pb-4 flex gap-3">
            <a
                href="/parent/finances/transactions/new"
                class="flex-1 bg-primary-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-primary-700 transition text-center text-sm flex items-center justify-center gap-2"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                {lang === "es" ? "Nueva Transacción" : "New Transaction"}
            </a>
            <a
                href="/parent/finances/transactions"
                class="flex-1 bg-slate-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-slate-700 transition text-center text-sm flex items-center justify-center gap-2"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                {lang === "es" ? "Ver Todas" : "All Transactions"}
            </a>
        </div>

        <!-- Assignment Hint Banner -->
        {expenseGroups.length > 0 && (
            <div class="mx-6 mb-4 bg-blue-50 border border-blue-200 rounded-xl px-4 py-3 flex items-start gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500 mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p class="text-sm text-blue-700">
                    {t(lang, 'fin_assign_hint')}
                </p>
            </div>
        )}

        <!-- Budget Categories -->
        <main class="px-6 pb-6 flex-grow">
            {!budgetOk ? (
                <div class="bg-red-50 border border-red-200 rounded-xl p-4 text-red-700">
                    <p class="font-semibold">{lang === "es" ? "Error al cargar presupuesto" : "Error loading budget"}</p>
                    <p class="text-sm">{error || (lang === "es" ? "Error desconocido" : "Unknown error")}</p>
                </div>
            ) : (
                <div class="space-y-4">
                    {/* Income Section - Single Group */}
                    {incomeGroups.length > 0 && (
                        <BudgetCategoryGroup
                            group={incomeGroups[0]}
                            isIncome={true}
                            lang={lang}
                            t={t}
                            formatCurrency={formatCurrency}
                            token={token}
                        />
                    )}

                    {/* Expense Groups */}
                    {expenseGroups.map(group => (
                        <BudgetCategoryGroup
                            group={group}
                            isIncome={false}
                            lang={lang}
                            t={t}
                            formatCurrency={formatCurrency}
                            token={token}
                            allExpenseCategories={allExpenseCategories}
                        />
                    ))}

                    {expenseGroups.length === 0 && incomeGroups.length === 0 && (
                        <div class="bg-slate-100 border border-slate-200 rounded-xl p-8 text-center">
                            <p class="text-slate-600 font-medium">
                                {lang === "es" ? "No hay categorías configuradas" : "No categories configured"}
                            </p>
                            <p class="text-sm text-slate-500 mt-1">
                                {lang === "es" ? "Ve a Categorías para crear grupos y categorías" : "Go to Categories to create groups and categories"}
                            </p>
                            <a href="/parent/finances/categories" class="inline-block mt-3 bg-primary-600 text-white text-sm font-semibold px-4 py-2 rounded-lg hover:bg-primary-700 transition">
                                {lang === "es" ? "Ir a Categorías" : "Go to Categories"}
                            </a>
                        </div>
                    )}
                </div>
            )}
        </main>

        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>

    <!-- Assign Funds Modal -->
    <AssignFundsModal
        readyToAssign={readyToAssign}
        categories={allExpenseCategories}
        lang={lang}
        t={t}
        formatCurrency={formatCurrency}
        baseRoute="assign-funds"
    />

    <!-- Transfer / Cover Modal -->
    <div id="transfer-modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-6">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full">
            <div class="bg-slate-700 text-white px-6 py-4 rounded-t-2xl">
                <div class="flex items-center justify-between">
                    <h2 id="transfer-modal-title" class="text-xl font-bold">{t(lang, 'fin_transfer_category')}</h2>
                    <button id="close-transfer-modal" class="text-white hover:text-slate-200 transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="p-6 space-y-4">
                <p id="transfer-category-name" class="text-sm text-slate-600"></p>

                <!-- Action tabs -->
                <div class="flex rounded-lg overflow-hidden border border-slate-200">
                    <button id="tab-transfer" class="transfer-tab flex-1 py-2 text-sm font-semibold bg-slate-700 text-white transition">
                        {t(lang, 'fin_transfer_category')}
                    </button>
                    <button id="tab-cover" class="transfer-tab flex-1 py-2 text-sm font-semibold bg-white text-slate-600 transition">
                        {t(lang, 'fin_cover_overspending')}
                    </button>
                </div>

                <!-- Transfer panel -->
                <div id="panel-transfer" class="space-y-3">
                    <div>
                        <label class="block text-xs font-semibold text-slate-700 mb-1">{t(lang, 'fin_transfer_to')}</label>
                        <select id="transfer-target" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-slate-500 focus:border-slate-500">
                            {allExpenseCategories.map(cat => (
                                <option value={cat.id}>{cat.groupName} → {cat.name}</option>
                            ))}
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-semibold text-slate-700 mb-1">{t(lang, 'fin_transfer_amount')}</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-500">$</span>
                            <input
                                type="number"
                                id="transfer-amount"
                                step="0.01"
                                min="0.01"
                                placeholder="0.00"
                                class="w-full pl-7 pr-4 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-slate-500 focus:border-slate-500"
                            />
                        </div>
                    </div>
                </div>

                <!-- Cover overspending panel (hidden by default) -->
                <div id="panel-cover" class="hidden space-y-3">
                    <div>
                        <label class="block text-xs font-semibold text-slate-700 mb-1">{t(lang, 'fin_transfer_from')}</label>
                        <select id="cover-source" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-slate-500 focus:border-slate-500">
                            {allExpenseCategories.map(cat => (
                                <option value={cat.id}>{cat.groupName} → {cat.name}</option>
                            ))}
                        </select>
                    </div>
                    <p id="cover-amount-display" class="text-sm text-slate-600"></p>
                </div>

                <div id="transfer-error" class="hidden bg-red-50 border border-red-200 rounded-lg p-3 text-red-700 text-sm"></div>
                <div id="transfer-success" class="hidden bg-green-50 border border-green-200 rounded-lg p-3 text-green-700 text-sm">{t(lang, 'fin_transfer_success')}</div>

                <div class="flex gap-3 pt-2">
                    <button id="cancel-transfer-btn" class="flex-1 bg-slate-200 text-slate-700 px-4 py-2 rounded-lg font-semibold hover:bg-slate-300 transition text-sm">
                        {lang === "es" ? "Cancelar" : "Cancel"}
                    </button>
                    <button id="confirm-transfer-btn" class="flex-1 bg-slate-700 text-white px-4 py-2 rounded-lg font-semibold hover:bg-slate-800 transition text-sm">
                        {lang === "es" ? "Confirmar" : "Confirm"}
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Category Modal -->
    <div id="create-category-modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-6">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full">
            <div class="bg-primary-600 text-white px-6 py-4 rounded-t-2xl">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold">{lang === "es" ? "Nueva Categoría" : "New Category"}</h2>
                    <button id="close-create-modal" class="text-white hover:text-primary-100 transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="p-6">
                <p id="create-modal-group-name" class="text-sm text-slate-600 mb-4"></p>
                
                <div class="space-y-4">
                    <div>
                        <label for="category-name" class="block text-sm font-semibold text-slate-700 mb-2">
                            {lang === "es" ? "Nombre de la Categoría" : "Category Name"}
                        </label>
                        <input
                            type="text"
                            id="category-name"
                            placeholder={lang === "es" ? "ej. Comida" : "e.g. Groceries"}
                            class="w-full px-4 py-3 border-2 border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                        />
                    </div>

                    <div class="bg-slate-50 rounded-lg p-3 text-sm text-slate-600">
                        <p>{lang === "es" ? "La categoría se agregará a" : "Category will be added to"} <span id="create-modal-group-display" class="font-semibold text-slate-900"></span></p>
                    </div>
                </div>

                <div class="flex gap-3 mt-6">
                    <button
                        id="cancel-create-btn"
                        class="flex-1 bg-slate-200 text-slate-700 px-6 py-3 rounded-lg font-semibold hover:bg-slate-300 transition"
                    >
                        {lang === "es" ? "Cancelar" : "Cancel"}
                    </button>
                    <button
                        id="create-btn"
                        class="flex-1 bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition"
                    >
                        {lang === "es" ? "Crear" : "Create"}
                    </button>
                </div>

                <div id="create-modal-error" class="hidden mt-4 bg-red-50 border border-red-200 rounded-lg p-3 text-red-700 text-sm"></div>
                <div id="create-modal-loading" class="hidden mt-4 text-center">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script define:vars={{ yearNum, monthNum }}>
    // ── Helpers ──────────────────────────────────────────────────────────────

    function formatCurrency(cents) {
        return new Intl.NumberFormat('es-MX', {
            style: 'currency',
            currency: 'MXN',
            minimumFractionDigits: 0,
            maximumFractionDigits: 0,
        }).format(cents / 100);
    }

    const monthStr = `${yearNum}-${String(monthNum).padStart(2, '0')}-01`;

    // ── Transfer / Cover modal ────────────────────────────────────────────────

    const transferModal = document.getElementById('transfer-modal');
    const closeTransferBtn = document.getElementById('close-transfer-modal');
    const cancelTransferBtn = document.getElementById('cancel-transfer-btn');
    const confirmTransferBtn = document.getElementById('confirm-transfer-btn');
    const tabTransfer = document.getElementById('tab-transfer');
    const tabCover = document.getElementById('tab-cover');
    const panelTransfer = document.getElementById('panel-transfer');
    const panelCover = document.getElementById('panel-cover');
    const transferTarget = document.getElementById('transfer-target');
    const transferAmount = document.getElementById('transfer-amount');
    const coverSource = document.getElementById('cover-source');
    const coverAmountDisplay = document.getElementById('cover-amount-display');
    const transferError = document.getElementById('transfer-error');
    const transferSuccess = document.getElementById('transfer-success');
    const transferCategoryName = document.getElementById('transfer-category-name');
    const transferModalTitle = document.getElementById('transfer-modal-title');

    let currentTransferCategoryId = null;
    let currentTransferMode = 'transfer'; // 'transfer' | 'cover'

    function openTransferModal(categoryId, categoryName, available) {
        currentTransferCategoryId = categoryId;
        currentTransferMode = 'transfer';
        transferCategoryName.textContent = categoryName;
        transferError.classList.add('hidden');
        transferSuccess.classList.add('hidden');
        transferAmount.value = '';

        // Remove the source category from both dropdowns
        Array.from(transferTarget.options).forEach(opt => {
            opt.style.display = opt.value === categoryId ? 'none' : '';
        });
        Array.from(coverSource.options).forEach(opt => {
            opt.style.display = opt.value === categoryId ? 'none' : '';
        });

        // Default cover amount display
        const deficit = Math.abs(available);
        coverAmountDisplay.textContent = `Amount needed: ${formatCurrency(deficit)}`;

        // Show transfer tab by default
        setTab('transfer');

        // If available < 0, switch to cover tab and disable transfer tab
        if (available < 0) {
            setTab('cover');
            tabTransfer.disabled = true;
            tabTransfer.classList.add('opacity-40', 'cursor-not-allowed');
        } else {
            tabTransfer.disabled = false;
            tabTransfer.classList.remove('opacity-40', 'cursor-not-allowed');
        }

        transferModal.classList.remove('hidden');
    }

    function closeTransferModal() {
        transferModal.classList.add('hidden');
        currentTransferCategoryId = null;
        transferError.classList.add('hidden');
        transferSuccess.classList.add('hidden');
        confirmTransferBtn.disabled = false;
    }

    function setTab(mode) {
        currentTransferMode = mode;
        if (mode === 'transfer') {
            panelTransfer.classList.remove('hidden');
            panelCover.classList.add('hidden');
            tabTransfer.classList.add('bg-slate-700', 'text-white');
            tabTransfer.classList.remove('bg-white', 'text-slate-600');
            tabCover.classList.add('bg-white', 'text-slate-600');
            tabCover.classList.remove('bg-slate-700', 'text-white');
        } else {
            panelCover.classList.remove('hidden');
            panelTransfer.classList.add('hidden');
            tabCover.classList.add('bg-slate-700', 'text-white');
            tabCover.classList.remove('bg-white', 'text-slate-600');
            tabTransfer.classList.add('bg-white', 'text-slate-600');
            tabTransfer.classList.remove('bg-slate-700', 'text-white');
        }
    }

    tabTransfer?.addEventListener('click', () => setTab('transfer'));
    tabCover?.addEventListener('click', () => setTab('cover'));

    async function executeTransfer() {
        transferError.classList.add('hidden');
        confirmTransferBtn.disabled = true;

        try {
            if (currentTransferMode === 'transfer') {
                const targetId = transferTarget.value;
                const amountCents = Math.round(parseFloat(transferAmount.value) * 100);

                if (!targetId || isNaN(amountCents) || amountCents <= 0) {
                    transferError.textContent = 'Please enter a valid amount and target category.';
                    transferError.classList.remove('hidden');
                    confirmTransferBtn.disabled = false;
                    return;
                }

                const res = await fetch('/api/budget/transfers/categories', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        from_category_id: currentTransferCategoryId,
                        to_category_id: targetId,
                        amount: amountCents,
                        month: monthStr
                    })
                });

                if (!res.ok) {
                    const data = await res.json().catch(() => ({}));
                    throw new Error(data.detail || 'Transfer failed');
                }

            } else {
                // Cover overspending
                const sourceId = coverSource.value;
                if (!sourceId) {
                    transferError.textContent = 'Please select a source category.';
                    transferError.classList.remove('hidden');
                    confirmTransferBtn.disabled = false;
                    return;
                }

                const res = await fetch('/api/budget/transfers/cover-overspending', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        category_id: currentTransferCategoryId,
                        source_category_id: sourceId,
                        month: monthStr
                    })
                });

                if (!res.ok) {
                    const data = await res.json().catch(() => ({}));
                    throw new Error(data.detail || 'Cover failed');
                }
            }

            transferSuccess.classList.remove('hidden');
            setTimeout(() => { window.location.reload(); }, 800);

        } catch (err) {
            transferError.textContent = err.message;
            transferError.classList.remove('hidden');
            confirmTransferBtn.disabled = false;
        }
    }

    document.querySelectorAll('.available-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.stopPropagation();
            const row = btn.closest('.category-row');
            openTransferModal(
                btn.dataset.categoryId,
                btn.dataset.categoryName,
                parseInt(btn.dataset.available || '0')
            );
        });
    });

    closeTransferBtn?.addEventListener('click', closeTransferModal);
    cancelTransferBtn?.addEventListener('click', closeTransferModal);
    confirmTransferBtn?.addEventListener('click', executeTransfer);
    transferModal?.addEventListener('click', (e) => { if (e.target === transferModal) closeTransferModal(); });

    // ── Create category modal ────────────────────────────────────────────────

    const createModal = document.getElementById('create-category-modal');
    const closeCreateModalBtn = document.getElementById('close-create-modal');
    const cancelCreateBtn = document.getElementById('cancel-create-btn');
    const createBtn = document.getElementById('create-btn');
    const categoryNameInput = document.getElementById('category-name');
    const createModalGroupName = document.getElementById('create-modal-group-name');
    const createModalGroupDisplay = document.getElementById('create-modal-group-display');
    const createModalError = document.getElementById('create-modal-error');
    const createModalLoading = document.getElementById('create-modal-loading');

    let currentGroupId = null;

    function openCreateModal(groupId, groupName) {
        currentGroupId = groupId;
        createModalGroupName.textContent = 'Nueva categoría en';
        createModalGroupDisplay.textContent = groupName;
        categoryNameInput.value = '';
        createModalError.classList.add('hidden');
        createModalLoading.classList.add('hidden');
        createModal.classList.remove('hidden');
        categoryNameInput.focus();
    }

    function closeCreateModal() {
        createModal.classList.add('hidden');
        currentGroupId = null;
        createModalError.classList.add('hidden');
        createModalLoading.classList.add('hidden');
    }

    async function createCategory() {
        const categoryName = categoryNameInput.value.trim();
        if (!categoryName) {
            createModalError.textContent = 'Por favor ingresa un nombre de categoría';
            createModalError.classList.remove('hidden');
            return;
        }

        createModalError.classList.add('hidden');
        createModalLoading.classList.remove('hidden');
        createBtn.disabled = true;

        try {
            const res = await fetch('/api/budget/categories/', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    name: categoryName,
                    group_id: currentGroupId,
                    rollover_enabled: true,
                    sort_order: 0
                })
            });

            if (!res.ok) {
                const err = await res.json().catch(() => ({}));
                const msg = Array.isArray(err.detail) ? err.detail[0]?.msg : (err.detail || err.message);
                throw new Error(msg || `Error ${res.status} al crear categoría`);
            }

            window.location.reload();
        } catch (err) {
            createModalError.textContent = err.message;
            createModalError.classList.remove('hidden');
            createModalLoading.classList.add('hidden');
            createBtn.disabled = false;
        }
    }

    document.querySelectorAll('.quick-add-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            openCreateModal(btn.dataset.groupId, btn.dataset.groupName);
        });
    });

    closeCreateModalBtn?.addEventListener('click', closeCreateModal);
    cancelCreateBtn?.addEventListener('click', closeCreateModal);
    createBtn?.addEventListener('click', createCategory);
    categoryNameInput?.addEventListener('keypress', (e) => { if (e.key === 'Enter') createCategory(); });
