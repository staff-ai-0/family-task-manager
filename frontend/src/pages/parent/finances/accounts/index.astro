---
/**
 * Accounts List Page
 * Shows all budget accounts with current balances
 */

import Layout from "@layouts/Layout.astro";
import BottomNav from "@components/BottomNav.astro";
import BudgetNav from "@components/BudgetNav.astro";
import { apiFetch } from "@lib/api";
import { getAccounts, formatCurrency } from "@lib/api/budget";
import type { BudgetAccount } from "@lib/api/budget";
import { t } from "@lib/i18n";

// Authentication check
const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");

const lang = Astro.cookies.get("lang")?.value ?? "en";

// Get user info
const { data: user, ok: userOk } = await apiFetch<any>("/api/auth/me", { token });
if (!userOk) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}

// Only parents can view budget
if (user.role !== "parent") {
    return Astro.redirect("/dashboard");
}

// Fetch all accounts (including closed if needed)
const { data: accounts, ok: accountsOk, error } = await getAccounts(token, {
    includeClosed: false,
});

// Get balances for all accounts
    const accountsWithBalances = await Promise.all(
        (accounts || []).map(async (account) => {
            const { data: balanceResponse } = await apiFetch<{
                balance: number;
                balance_cents: number;
                cleared_balance: number;
                cleared_balance_cents: number;
                uncleared_balance: number;
                uncleared_balance_cents: number;
            }>(
                `/api/parent/finances/accounts/${account.id}/balance`,
                { token }
            );

            const normalizedBalance = balanceResponse
                ? {
                      total: balanceResponse.balance_cents,
                      cleared: balanceResponse.cleared_balance_cents,
                      uncleared: balanceResponse.uncleared_balance_cents,
                  }
                : { total: 0, cleared: 0, uncleared: 0 };

            return {
                ...account,
                balance: normalizedBalance,
            };
        })
    );

// Group accounts by type
const accountsByType = accountsWithBalances.reduce((acc, account) => {
    if (!acc[account.type]) acc[account.type] = [];
    acc[account.type].push(account);
    return acc;
}, {} as Record<string, typeof accountsWithBalances>);

// Calculate total net worth
const budgetAccounts = accountsWithBalances.filter(a => !a.offbudget);
const totalNetWorth = budgetAccounts.reduce((sum, a) => sum + a.balance.total, 0);

// Type labels (lang-aware)
const typeLabels: Record<string, string> = lang === "es" ? {
    checking: "Cuentas Corrientes",
    savings: "Ahorros",
    credit: "Crédito",
    investment: "Inversión",
    other: "Otras",
} : {
    checking: "Checking",
    savings: "Savings",
    credit: "Credit",
    investment: "Investment",
    other: "Other",
};

const typeIcons: Record<string, string> = {
    checking: "M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z",
    savings: "M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z",
    credit: "M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z",
    investment: "M13 7h8m0 0v8m0-8l-8 8-4-4-6 6",
    other: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10",
};
---

<Layout title="Cuentas - Presupuesto">
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto min-h-screen bg-slate-50 flex flex-col pb-40">
        <!-- Header -->
        <header class="bg-primary-600 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md">
            <div class="flex items-center justify-between mb-6">
                <a href="/budget" class="text-white hover:text-primary-100 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
                <h1 class="text-2xl font-bold">{lang === "es" ? "Cuentas" : "Accounts"}</h1>
                <a href="/parent/finances/accounts/new" class="text-white hover:text-primary-100 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                </a>
            </div>

            <!-- Net Worth Summary -->
            <div class="bg-white/20 backdrop-blur-md rounded-2xl p-4 border border-white/30">
                <p class="text-primary-50 text-xs font-semibold uppercase tracking-wider mb-1">
                    {lang === "es" ? "Valor Neto Total" : "Total Net Worth"}
                </p>
                <p class="text-3xl font-extrabold tracking-tight text-white">
                    {formatCurrency(totalNetWorth)}
                </p>
                <p class="text-primary-50 text-xs mt-2">
                    {budgetAccounts.length} {lang === "es" ? (budgetAccounts.length === 1 ? 'cuenta' : 'cuentas') : (budgetAccounts.length === 1 ? 'account' : 'accounts')}
                </p>
            </div>
        </header>

        <!-- Budget Section Nav -->
        <BudgetNav active="accounts" />

        <!-- New Account Button -->
        <div class="px-6 py-4">
            <a
                href="/parent/finances/accounts/new"
                class="w-full bg-primary-600 text-white px-4 py-3 rounded-lg font-semibold hover:bg-primary-700 transition flex items-center justify-center gap-2"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                {lang === "es" ? "Nueva Cuenta" : "New Account"}
            </a>
        </div>

        <!-- Accounts List -->
        <main class="px-6 py-4 flex-grow">
            {!accountsOk ? (
                <div class="bg-red-50 border border-red-200 rounded-xl p-4 text-red-700">
                    <p class="font-semibold">{lang === "es" ? "Error al cargar cuentas" : "Error loading accounts"}</p>
                    <p class="text-sm">{error || (lang === "es" ? "Error desconocido" : "Unknown error")}</p>
                </div>
            ) : accountsWithBalances.length === 0 ? (
                <div class="bg-slate-100 border border-slate-200 rounded-xl p-8 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-slate-400 mx-auto mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                    </svg>
                    <p class="text-slate-600 font-medium">{lang === "es" ? "No hay cuentas" : "No accounts yet"}</p>
                    <p class="text-sm text-slate-500 mt-1">{lang === "es" ? "Crea tu primera cuenta para empezar" : "Create your first account to get started"}</p>
                    <a href="/parent/finances/accounts/new" class="inline-block mt-4 bg-primary-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-primary-700 transition">
                        {lang === "es" ? "Nueva Cuenta" : "New Account"}
                    </a>
                </div>
            ) : (
                <div class="space-y-4">
                    {Object.entries(accountsByType).map(([type, typeAccounts]) => (
                        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                            <div class="bg-slate-100 px-4 py-3 border-b border-slate-200">
                                <h2 class="font-bold text-slate-800 text-sm uppercase tracking-wide flex items-center gap-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={typeIcons[type]} />
                                    </svg>
                                    {typeLabels[type]}
                                </h2>
                            </div>
                            <div class="divide-y divide-slate-100">
                                {typeAccounts.map(account => {
                                    const isNegative = account.balance.total < 0;
                                    const hasUncleared = account.balance.uncleared !== 0;
                                    
                                    return (
                                        <a
                                            href={`/parent/finances/accounts/${account.id}`}
                                            class="block px-4 py-3 hover:bg-slate-50 transition"
                                        >
                                            <div class="flex items-center justify-between mb-1">
                                                <div class="flex-1">
                                                    <p class="text-sm font-medium text-slate-700">
                                                        {account.name}
                                                    </p>
                                                    {account.offbudget && (
                                                        <span class="inline-block mt-1 text-xs bg-slate-200 text-slate-600 px-2 py-0.5 rounded-full font-semibold">
                                                            {lang === "es" ? "Fuera del presupuesto" : "Off budget"}
                                                        </span>
                                                    )}
                                                </div>
                                                <div class="text-right">
                                                    <p class={`text-base font-bold ${isNegative ? 'text-red-600' : 'text-slate-900'}`}>
                                                        {formatCurrency(account.balance.total)}
                                                    </p>
                                                    {hasUncleared && (
                                                        <p class="text-xs text-slate-500 mt-0.5">
                                                        {formatCurrency(account.balance.cleared)} {lang === "es" ? "conciliado" : "cleared"}
                                                        </p>
                                                    )}
                                                </div>
                                            </div>
                                            {account.notes && (
                                                <p class="text-xs text-slate-400 mt-1">
                                                    {account.notes}
                                                </p>
                                            )}
                                        </a>
                                    );
                                })}
                            </div>
                        </div>
                    ))}
                </div>
            )}
        </main>

        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>
</Layout>
