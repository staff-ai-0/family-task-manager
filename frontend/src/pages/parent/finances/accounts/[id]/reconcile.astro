---
/**
 * Account Reconciliation Page
 * Allows marking transactions as reconciled to match bank statements
 */

import Layout from "../../../../../layouts/Layout.astro";
import BottomNav from "../../../../../components/BottomNav.astro";
import { apiFetch } from "../../../../../lib/api";
import { getAccount, getTransactions, getCategories, reconcileAccount, formatCurrency, formatDate } from "../../../../../lib/api/budget";
import type { BudgetTransaction } from "../../../../../lib/api/budget";

// Authentication check
const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");

const lang = Astro.cookies.get("lang")?.value ?? "en";

// Get user info
const { data: user, ok: userOk } = await apiFetch<any>("/api/auth/me", { token });
if (!userOk) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}

// Only parents can manage budget
if (user.role !== "parent") {
    return Astro.redirect("/dashboard");
}

// Get account ID from URL
const { id } = Astro.params;
if (!id) return Astro.redirect("/parent/finances/accounts");

// Fetch account details
const { data: account, ok: accountOk } = await getAccount(token, id);
if (!accountOk || !account) {
    return Astro.redirect("/parent/finances/accounts");
}

// Handle form submission
let error: string | null = null;
let success = false;
let reconciledCount = 0;

if (Astro.request.method === "POST") {
    try {
        const formData = await Astro.request.formData();
        const transactionIds = formData.getAll("transaction_id") as string[];

        if (transactionIds.length > 0) {
            const result = await reconcileAccount(token, id, transactionIds);
            
            if (result.ok && result.data) {
                success = true;
                reconciledCount = result.data.updated_count;
                // Redirect back to account detail
                return Astro.redirect(`/parent/finances/accounts/${id}`);
            } else {
                error = result.error || "Error al conciliar transacciones";
            }
        } else {
            error = "No se seleccionaron transacciones";
        }
    } catch (e: any) {
        error = e.message || "Error al procesar formulario";
    }
}

// Get account balance
const { data: balance } = await apiFetch<{ total: number; cleared: number; uncleared: number }>(
    `/api/parent/finances/accounts/${id}/balance`,
    { token }
);

// Fetch uncleared transactions for this account
const { data: transactions, ok: transOk } = await getTransactions(token, {
    accountId: id,
    limit: 200,
});

// Fetch categories for display
const { data: categories } = await getCategories(token);
const categoryMap = new Map(categories?.map(c => [c.id, c]) || []);

// Filter only uncleared transactions
const unclearedTransactions = transactions?.filter(t => !t.cleared) || [];

// Sort by date (newest first)
const sortedTransactions = unclearedTransactions.sort((a, b) => 
    new Date(b.date).getTime() - new Date(a.date).getTime()
);

// Calculate total uncleared amount
const totalUncleared = sortedTransactions.reduce((sum, t) => sum + t.amount, 0);
---

<Layout title={`Conciliar ${account.name}`}>
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto min-h-screen bg-slate-50 flex flex-col pb-24">
        <!-- Header -->
        <header class="bg-green-600 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md">
            <div class="flex items-center justify-between mb-6">
                <a href={`/parent/finances/accounts/${id}`} class="text-white hover:text-green-100 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
                <h1 class="text-2xl font-bold">Conciliar</h1>
                <div class="w-6"></div>
            </div>

            <!-- Account Info -->
            <div class="bg-white/20 backdrop-blur-md rounded-2xl p-4 border border-white/30">
                <p class="text-green-50 text-xs font-semibold uppercase tracking-wider mb-1">
                    {account.name}
                </p>
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <p class="text-green-50 text-xs mb-1">Saldo Conciliado</p>
                        <p class="text-2xl font-bold text-white">
                            {formatCurrency(balance?.cleared || 0)}
                        </p>
                    </div>
                    <div>
                        <p class="text-green-50 text-xs mb-1">Por Conciliar</p>
                        <p class="text-2xl font-bold text-white">
                            {formatCurrency(balance?.uncleared || 0)}
                        </p>
                    </div>
                </div>
            </div>
        </header>

        <!-- Instructions -->
        <div class="px-6 py-4">
            <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                <div class="flex items-start gap-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="flex-1">
                        <p class="text-sm font-semibold text-blue-900 mb-1">
                            Cómo conciliar
                        </p>
                        <p class="text-xs text-blue-700">
                            Marca las transacciones que aparecen en tu estado de cuenta bancario. Compara el saldo conciliado con el saldo real de tu banco.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form -->
        <main class="px-6 pb-6 flex-grow">
            {error && (
                <div class="bg-red-50 border border-red-200 rounded-xl p-4 text-red-700 mb-4">
                    <p class="font-semibold">Error</p>
                    <p class="text-sm">{error}</p>
                </div>
            )}

            {!transOk ? (
                <div class="bg-red-50 border border-red-200 rounded-xl p-4 text-red-700">
                    <p class="font-semibold">Error al cargar transacciones</p>
                </div>
            ) : sortedTransactions.length === 0 ? (
                <div class="bg-white border border-slate-200 rounded-xl p-8 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-green-500 mx-auto mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <p class="text-slate-700 font-medium text-lg">¡Todas las transacciones conciliadas!</p>
                    <p class="text-sm text-slate-500 mt-1">No hay transacciones pendientes por conciliar</p>
                    <a 
                        href={`/parent/finances/accounts/${id}`}
                        class="inline-block mt-4 bg-green-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-700 transition"
                    >
                        Volver a la Cuenta
                    </a>
                </div>
            ) : (
                <form method="POST">
                    <div class="bg-white rounded-xl shadow-sm overflow-hidden mb-4">
                        <div class="bg-slate-100 px-4 py-3 border-b border-slate-200">
                            <div class="flex items-center justify-between">
                                <h2 class="font-semibold text-slate-700 text-sm">
                                    {sortedTransactions.length} {sortedTransactions.length === 1 ? 'transacción' : 'transacciones'} sin conciliar
                                </h2>
                                <span class="text-xs font-semibold text-slate-600">
                                    Total: {formatCurrency(totalUncleared)}
                                </span>
                            </div>
                        </div>
                        <div class="divide-y divide-slate-100">
                            {sortedTransactions.map(transaction => {
                                const category = transaction.category_id ? categoryMap.get(transaction.category_id) : null;
                                const isIncome = transaction.amount > 0;
                                
                                return (
                                    <label class="flex items-center gap-3 px-4 py-3 hover:bg-slate-50 transition cursor-pointer">
                                        <input
                                            type="checkbox"
                                            name="transaction_id"
                                            value={transaction.id}
                                            class="w-5 h-5 text-green-600 border-slate-300 rounded focus:ring-2 focus:ring-green-500"
                                        />
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center justify-between mb-1">
                                                <div class="flex-1 min-w-0">
                                                    <p class="text-sm font-medium text-slate-700 truncate">
                                                        {category?.name || "Sin categoría"}
                                                    </p>
                                                    <p class="text-xs text-slate-500">
                                                        {formatDate(transaction.date, lang)}
                                                    </p>
                                                </div>
                                                <p class={`text-sm font-bold ml-3 ${isIncome ? 'text-green-600' : 'text-red-600'}`}>
                                                    {isIncome ? '+' : ''}{formatCurrency(transaction.amount)}
                                                </p>
                                            </div>
                                            {transaction.notes && (
                                                <p class="text-xs text-slate-400 mt-1 truncate">
                                                    {transaction.notes}
                                                </p>
                                            )}
                                        </div>
                                    </label>
                                );
                            })}
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex gap-3">
                        <a
                            href={`/parent/finances/accounts/${id}`}
                            class="flex-1 bg-slate-200 text-slate-700 px-6 py-3 rounded-lg font-semibold hover:bg-slate-300 transition text-center"
                        >
                            Cancelar
                        </a>
                        <button
                            type="submit"
                            class="flex-1 bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition"
                        >
                            Conciliar Seleccionadas
                        </button>
                    </div>

                    <!-- Quick Actions -->
                    <div class="mt-4 flex gap-2">
                        <button
                            type="button"
                            id="select-all"
                            class="flex-1 bg-slate-100 text-slate-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-slate-200 transition"
                        >
                            Seleccionar Todas
                        </button>
                        <button
                            type="button"
                            id="deselect-all"
                            class="flex-1 bg-slate-100 text-slate-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-slate-200 transition"
                        >
                            Deseleccionar Todas
                        </button>
                    </div>
                </form>
            )}
        </main>

        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>
</Layout>

<script>
    // Select/Deselect all functionality
    document.addEventListener('DOMContentLoaded', () => {
        const checkboxes = document.querySelectorAll('input[name="transaction_id"]') as NodeListOf<HTMLInputElement>;
        
        document.getElementById('select-all')?.addEventListener('click', () => {
            checkboxes.forEach(cb => cb.checked = true);
        });
        
        document.getElementById('deselect-all')?.addEventListener('click', () => {
            checkboxes.forEach(cb => cb.checked = false);
        });
    });
</script>
