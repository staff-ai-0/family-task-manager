---
import Layout from "../../layouts/Layout.astro";
import BottomNav from "../../components/BottomNav.astro";
import { apiFetch } from "../../lib/api";
import { t } from "../../lib/i18n";

const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");
const lang = Astro.cookies.get("lang")?.value ?? "en";

const { data: user } = await apiFetch<any>("/api/auth/me", { token });
if (!user) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}
if (user.role !== "parent") return Astro.redirect("/dashboard");

let successMsg = "";
let errorMsg = "";

if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const action = data.get("action");

    if (action === "create") {
        const payload: any = {
            title: data.get("title"),
            description: data.get("description") || null,
            points: Number(data.get("points")) || 10,
            interval_days: Number(data.get("interval_days")) || 1,
            is_bonus: data.get("is_bonus") === "on",
        };
        const { ok, error } = await apiFetch("/api/task-templates/", {
            method: "POST",
            token,
            body: JSON.stringify(payload),
        });
        if (ok) {
            successMsg = t(lang, "pt_created");
        } else {
            errorMsg = error || "Error";
        }
    }

    if (action === "delete") {
        const templateId = data.get("template_id");
        const { ok, error } = await apiFetch(`/api/task-templates/${templateId}`, {
            method: "DELETE",
            token,
        });
        if (ok) {
            successMsg = t(lang, "pt_deleted");
        } else {
            errorMsg = error || "Error";
        }
    }

    if (action === "toggle") {
        const templateId = data.get("template_id");
        const { ok, error } = await apiFetch(`/api/task-templates/${templateId}/toggle`, {
            method: "PATCH",
            token,
        });
        if (ok) {
            successMsg = "Template toggled.";
        } else {
            errorMsg = error || "Error";
        }
    }

    if (action === "shuffle") {
        const { ok, data: shuffleResult, error } = await apiFetch<any>("/api/task-assignments/shuffle", {
            method: "POST",
            token,
            body: JSON.stringify({}),
        });
        if (ok && shuffleResult) {
            successMsg = t(lang, "shuffle_success")(shuffleResult.assignments_created);
        } else {
            errorMsg = error || t(lang, "shuffle_error");
        }
    }
}

const [{ data: templates }, { data: weekAssignments }] = await Promise.all([
    apiFetch<any[]>("/api/task-templates/", { token }),
    apiFetch<any[]>("/api/task-assignments/week", { token }),
]);
const templateList: any[] = Array.isArray(templates) ? templates : [];
const assignmentList: any[] = Array.isArray(weekAssignments) ? weekAssignments : [];

// Group assignments by user
const assignmentsByUser: Record<string, any[]> = {};
for (const a of assignmentList) {
    const name = a.assigned_user_name || a.assigned_to;
    if (!assignmentsByUser[name]) assignmentsByUser[name] = [];
    assignmentsByUser[name].push(a);
}

function freqLabel(interval: number): string {
    if (interval === 1) return t(lang, "pt_daily") as string;
    if (interval === 7) return t(lang, "pt_weekly") as string;
    return (t(lang, "pt_every_n_days") as any)(interval);
}
---

<Layout title={`${t(lang, "pt_title")} - Family Task Manager`}>
    <div class="max-w-md mx-auto min-h-screen bg-slate-50 flex flex-col pb-24">
        <header
            class="bg-gradient-to-br from-primary-700 to-primary-600 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md"
        >
            <a
                href="/parent"
                class="text-primary-200 text-sm flex items-center gap-1 mb-3"
            >
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                {t(lang, "back_parent")}
            </a>
            <h1 class="text-2xl font-bold">{t(lang, "pt_title")}</h1>
            <p class="text-primary-200 text-sm mt-1">
                {t(lang, "pt_templates_in_family")(templateList.length)}
            </p>
        </header>

        <main class="flex-1 px-4 py-6 space-y-6">
            {successMsg && (
                <div class="p-3 bg-green-50 border border-green-200 text-green-700 text-sm rounded-xl">
                    {successMsg}
                </div>
            )}
            {errorMsg && (
                <div class="p-3 bg-red-50 border border-red-200 text-red-700 text-sm rounded-xl">
                    {errorMsg}
                </div>
            )}

            <!-- Shuffle Section -->
            <section class="bg-gradient-to-r from-amber-50 to-orange-50 rounded-2xl p-5 shadow-sm border border-amber-200">
                <div class="flex items-center justify-between mb-2">
                    <h2 class="font-bold text-slate-800">{t(lang, "shuffle_title")}</h2>
                </div>
                <p class="text-xs text-slate-500 mb-3">{t(lang, "shuffle_desc")}</p>
                <form method="POST">
                    <input type="hidden" name="action" value="shuffle" />
                    <button
                        type="submit"
                        onclick="return confirm('This will re-shuffle all pending assignments for this week. Continue?')"
                        class="w-full py-2.5 bg-amber-500 hover:bg-amber-600 text-white font-semibold text-sm rounded-lg transition-colors shadow-sm flex items-center justify-center gap-2"
                    >
                        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                        {t(lang, "shuffle_btn")}
                    </button>
                </form>
                {assignmentList.length > 0 && (
                    <p class="text-xs text-amber-700 mt-2 text-center">
                        {t(lang, "shuffle_week_of")}: {assignmentList[0]?.week_of} | {assignmentList.length} assignments
                    </p>
                )}
            </section>

            <!-- Create Template Form -->
            <section class="bg-white rounded-2xl p-5 shadow-sm border border-slate-100">
                <h2 class="font-bold text-slate-800 mb-4">{t(lang, "pt_create_title")}</h2>
                <form method="POST" class="space-y-3">
                    <input type="hidden" name="action" value="create" />
                    <input
                        name="title"
                        required
                        placeholder={t(lang, "pt_task_title")}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none"
                    />
                    <textarea
                        name="description"
                        placeholder={t(lang, "pt_description")}
                        rows={2}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none resize-none"
                    ></textarea>
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label class="text-xs font-medium text-slate-600 mb-1 block">
                                {t(lang, "pt_points")}
                            </label>
                            <input
                                type="number"
                                name="points"
                                min={1}
                                max={1000}
                                value={10}
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none"
                            />
                        </div>
                        <div>
                            <label class="text-xs font-medium text-slate-600 mb-1 block">
                                {t(lang, "pt_interval")}
                            </label>
                            <select
                                name="interval_days"
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none bg-white"
                            >
                                <option value="1">{t(lang, "pt_interval_daily")}</option>
                                <option value="3">{t(lang, "pt_interval_every3")}</option>
                                <option value="7">{t(lang, "pt_interval_weekly")}</option>
                            </select>
                        </div>
                    </div>
                    <div class="flex items-center gap-3 py-1">
                        <label class="relative inline-flex items-center cursor-pointer">
                            <input type="checkbox" name="is_bonus" class="sr-only peer" />
                            <div class="w-9 h-5 bg-slate-200 rounded-full peer peer-checked:bg-amber-500 peer-focus:ring-2 peer-focus:ring-amber-300 transition-colors after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:after:translate-x-full"></div>
                        </label>
                        <div>
                            <span class="text-sm font-medium text-slate-700">{t(lang, "pt_is_bonus")}</span>
                            <p class="text-xs text-slate-400">{t(lang, "pt_is_bonus_hint")}</p>
                        </div>
                    </div>
                    <button
                        type="submit"
                        class="w-full py-2.5 bg-primary-600 hover:bg-primary-700 text-white font-semibold text-sm rounded-lg transition-colors shadow-sm"
                    >
                        {t(lang, "pt_create_btn")}
                    </button>
                </form>
            </section>

            <!-- Template List -->
            <section>
                <h2 class="font-bold text-slate-800 mb-3 px-1">{t(lang, "pt_all_templates")}</h2>
                <div class="space-y-3">
                    {templateList.length === 0 ? (
                        <p class="text-slate-500 text-sm text-center py-6">{t(lang, "pt_none")}</p>
                    ) : (
                        templateList.map((tmpl: any) => (
                            <div class={`bg-white rounded-2xl p-4 shadow-sm border ${tmpl.is_active ? "border-slate-100" : "border-slate-200 opacity-60"}`}>
                                <div class="flex items-start justify-between gap-3">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2 flex-wrap mb-1">
                                            <h3 class="font-bold text-slate-800 text-sm">{tmpl.title}</h3>
                                            <span class={`text-xs font-semibold px-2 py-0.5 rounded-full ${
                                                tmpl.is_bonus
                                                    ? "bg-amber-100 text-amber-700"
                                                    : "bg-blue-100 text-blue-700"
                                            }`}>
                                                {tmpl.is_bonus ? t(lang, "pt_bonus") : t(lang, "pt_regular")}
                                            </span>
                                            <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-slate-100 text-slate-600">
                                                {freqLabel(tmpl.interval_days)}
                                            </span>
                                            {!tmpl.is_active && (
                                                <span class="text-xs font-semibold px-2 py-0.5 rounded-full bg-red-100 text-red-600">
                                                    {t(lang, "pt_inactive")}
                                                </span>
                                            )}
                                        </div>
                                        {tmpl.description && (
                                            <p class="text-xs text-slate-500 line-clamp-1">{tmpl.description}</p>
                                        )}
                                        <p class="text-xs text-amber-600 font-semibold mt-1">+{tmpl.points} pts</p>
                                    </div>
                                    <div class="flex gap-1.5 flex-shrink-0">
                                        <!-- Toggle active -->
                                        <form method="POST">
                                            <input type="hidden" name="action" value="toggle" />
                                            <input type="hidden" name="template_id" value={tmpl.id} />
                                            <button
                                                type="submit"
                                                title={tmpl.is_active ? "Deactivate" : "Activate"}
                                                class={`h-8 w-8 rounded-lg flex items-center justify-center transition-colors ${
                                                    tmpl.is_active
                                                        ? "bg-green-100 text-green-600 hover:bg-green-200"
                                                        : "bg-slate-100 text-slate-400 hover:bg-green-100 hover:text-green-600"
                                                }`}
                                            >
                                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={tmpl.is_active ? "M5 13l4 4L19 7" : "M12 4v16m8-8H4"} />
                                                </svg>
                                            </button>
                                        </form>
                                        <!-- Edit -->
                                        <a
                                            href={`/parent/tasks/${tmpl.id}/edit`}
                                            class="h-8 w-8 rounded-lg bg-slate-100 hover:bg-primary-100 text-slate-500 hover:text-primary-600 flex items-center justify-center transition-colors"
                                        >
                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </a>
                                        <!-- Delete -->
                                        <form method="POST">
                                            <input type="hidden" name="action" value="delete" />
                                            <input type="hidden" name="template_id" value={tmpl.id} />
                                            <button
                                                type="submit"
                                                onclick="return confirm('Delete this template and all its assignments?')"
                                                class="h-8 w-8 rounded-lg bg-slate-100 hover:bg-red-100 text-slate-500 hover:text-red-500 flex items-center justify-center transition-colors"
                                            >
                                                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        ))
                    )}
                </div>
            </section>
        </main>

        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>
</Layout>
