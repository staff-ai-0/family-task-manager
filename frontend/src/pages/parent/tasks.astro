---
import Layout from "../../layouts/Layout.astro";
import BottomNav from "../../components/BottomNav.astro";
import { apiFetch } from "../../lib/api";
import { t } from "../../lib/i18n";

const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");
const lang = Astro.cookies.get("lang")?.value ?? "en";

const { data: user } = await apiFetch<any>("/api/auth/me", { token });
if (!user) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}
if (user.role !== "parent") return Astro.redirect("/dashboard");

let successMsg = "";
let errorMsg = "";

if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const action = data.get("action");

    if (action === "create") {
        const payload: any = {
            title: data.get("title"),
            description: data.get("description") || null,
            points: Number(data.get("points")) || 10,
        };
        const assignedTo = data.get("assigned_to");
        if (assignedTo) payload.assigned_to = assignedTo;
        const dueDate = data.get("due_date");
        if (dueDate) payload.due_date = dueDate;
        const { ok, error } = await apiFetch("/api/tasks/", {
            method: "POST",
            token,
            body: JSON.stringify(payload),
        });
        if (ok) {
            successMsg = t(lang, "pt_created");
        } else {
            errorMsg = error || "Error";
        }
    }

    if (action === "delete") {
        const taskId = data.get("task_id");
        const { ok, error } = await apiFetch(`/api/tasks/${taskId}`, {
            method: "DELETE",
            token,
        });
        if (ok) {
            successMsg = t(lang, "pt_deleted");
        } else {
            errorMsg = error || "Error";
        }
    }
}

const [{ data: tasksRaw }, { data: family }] = await Promise.all([
    apiFetch<any[]>("/api/tasks", { token }),
    apiFetch<any>("/api/families/me", { token }),
]);
const tasks: any[] = Array.isArray(tasksRaw)
    ? tasksRaw
    : ((tasksRaw as any)?.items ?? []);
const members: any[] = family?.members ?? [];
---

<Layout title={`${t(lang, "pt_title")} - Family Task Manager`}>
    <div class="max-w-md mx-auto min-h-screen bg-slate-50 flex flex-col pb-24">
        <header
            class="bg-gradient-to-br from-primary-700 to-primary-600 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md"
        >
            <a
                href="/parent"
                class="text-primary-200 text-sm flex items-center gap-1 mb-3"
            >
                <svg
                    class="h-4 w-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
                {t(lang, "back_parent")}
            </a>
            <h1 class="text-2xl font-bold">{t(lang, "pt_title")}</h1>
            <p class="text-primary-200 text-sm mt-1">
                {t(lang, "pt_tasks_in_family")(tasks.length)}
            </p>
        </header>

        <main class="flex-1 px-4 py-6 space-y-6">
            {
                successMsg && (
                    <div class="p-3 bg-green-50 border border-green-200 text-green-700 text-sm rounded-xl">
                        {successMsg}
                    </div>
                )
            }
            {
                errorMsg && (
                    <div class="p-3 bg-red-50 border border-red-200 text-red-700 text-sm rounded-xl">
                        {errorMsg}
                    </div>
                )
            }

            <section
                class="bg-white rounded-2xl p-5 shadow-sm border border-slate-100"
            >
                <h2 class="font-bold text-slate-800 mb-4">
                    {t(lang, "pt_create_title")}
                </h2>
                <form method="POST" class="space-y-3">
                    <input type="hidden" name="action" value="create" />
                    <input
                        name="title"
                        required
                        placeholder={t(lang, "pt_task_title")}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none"
                    />
                    <textarea
                        name="description"
                        placeholder={t(lang, "pt_description")}
                        rows={2}
                        class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none resize-none"
                    ></textarea>
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <label
                                class="text-xs font-medium text-slate-600 mb-1 block"
                                >{t(lang, "pt_points")}</label
                            >
                            <input
                                type="number"
                                name="points"
                                min={1}
                                value={10}
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none"
                            />
                        </div>
                        <div>
                            <label
                                class="text-xs font-medium text-slate-600 mb-1 block"
                                >{t(lang, "pt_due_date")}</label
                            >
                            <input
                                type="date"
                                name="due_date"
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none"
                            />
                        </div>
                    </div>
                    {
                        members.length > 0 && (
                            <div>
                                <label class="text-xs font-medium text-slate-600 mb-1 block">
                                    {t(lang, "pt_assign_to")}
                                </label>
                                <select
                                    name="assigned_to"
                                    class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none bg-white"
                                >
                                    <option value="">
                                        {t(lang, "pt_unassigned")}
                                    </option>
                                    {members.map((m: any) => (
                                        <option value={m.id}>{m.name}</option>
                                    ))}
                                </select>
                            </div>
                        )
                    }
                    <button
                        type="submit"
                        class="w-full py-2.5 bg-primary-600 hover:bg-primary-700 text-white font-semibold text-sm rounded-lg transition-colors shadow-sm"
                    >
                        {t(lang, "pt_create_btn")}
                    </button>
                </form>
            </section>

            <section>
                <h2 class="font-bold text-slate-800 mb-3 px-1">
                    {t(lang, "pt_all_tasks")}
                </h2>
                <div class="space-y-3">
                    {
                        tasks.length === 0 ? (
                            <p class="text-slate-500 text-sm text-center py-6">
                                {t(lang, "pt_none")}
                            </p>
                        ) : (
                            tasks.map((task: any) => (
                                <div class="bg-white rounded-2xl p-4 shadow-sm border border-slate-100">
                                    <div class="flex items-start justify-between gap-3">
                                        <div class="flex-1">
                                            <div class="flex items-center gap-2 flex-wrap mb-1">
                                                <h3 class="font-bold text-slate-800 text-sm">
                                                    {task.title}
                                                </h3>
                                                <span
                                                    class={`text-xs font-semibold px-2 py-0.5 rounded-full ${
                                                        task.status ===
                                                        "COMPLETED"
                                                            ? "bg-green-100 text-green-700"
                                                            : task.status ===
                                                                "IN_PROGRESS"
                                                              ? "bg-blue-100 text-blue-700"
                                                              : task.status ===
                                                                  "OVERDUE"
                                                                ? "bg-red-100 text-red-700"
                                                                : "bg-slate-100 text-slate-600"
                                                    }`}
                                                >
                                                    {task.status}
                                                </span>
                                            </div>
                                            {task.description && (
                                                <p class="text-xs text-slate-500 line-clamp-1">
                                                    {task.description}
                                                </p>
                                            )}
                                            <p class="text-xs text-amber-600 font-semibold mt-1">
                                                +{task.points} pts
                                            </p>
                                        </div>
                                        <div class="flex gap-2 flex-shrink-0">
                                            <a
                                                href={`/parent/tasks/${task.id}/edit`}
                                                class="h-8 w-8 rounded-lg bg-slate-100 hover:bg-primary-100 text-slate-500 hover:text-primary-600 flex items-center justify-center transition-colors"
                                            >
                                                <svg
                                                    class="h-4 w-4"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                                                    />
                                                </svg>
                                            </a>
                                            <form method="POST">
                                                <input
                                                    type="hidden"
                                                    name="action"
                                                    value="delete"
                                                />
                                                <input
                                                    type="hidden"
                                                    name="task_id"
                                                    value={task.id}
                                                />
                                                <button
                                                    type="submit"
                                                    onclick="return confirm('Delete this task?')"
                                                    class="h-8 w-8 rounded-lg bg-slate-100 hover:bg-red-100 text-slate-500 hover:text-red-500 flex items-center justify-center transition-colors"
                                                >
                                                    <svg
                                                        class="h-4 w-4"
                                                        fill="none"
                                                        viewBox="0 0 24 24"
                                                        stroke="currentColor"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                                        />
                                                    </svg>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            ))
                        )
                    }
                </div>
            </section>
        </main>

        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>
</Layout>
