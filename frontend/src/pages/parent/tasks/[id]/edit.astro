---
import Layout from "../../../../layouts/Layout.astro";
import BottomNav from "../../../../components/BottomNav.astro";
import { apiFetch } from "../../../../lib/api";
import { t } from "../../../../lib/i18n";

const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");
const lang = Astro.cookies.get("lang")?.value ?? "en";

const { data: user } = await apiFetch<any>("/api/auth/me", { token });
if (!user) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}
if (user.role !== "parent") return Astro.redirect("/dashboard");

const { id } = Astro.params;
let errorMsg = "";

if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const payload: any = {
        title: data.get("title"),
        description: data.get("description") || null,
        title_es: data.get("title_es") || null,
        description_es: data.get("description_es") || null,
        points: Number(data.get("points")) || 10,
        interval_days: Number(data.get("interval_days")) || 1,
        is_bonus: data.get("is_bonus") === "on",
    };

    const { ok, error } = await apiFetch(`/api/task-templates/${id}`, {
        method: "PUT",
        token,
        body: JSON.stringify(payload),
    });
    if (ok) {
        return Astro.redirect("/parent/tasks");
    } else {
        errorMsg = error || "Error";
    }
}

const { data: tmpl } = await apiFetch<any>(`/api/task-templates/${id}`, { token });
if (!tmpl) return Astro.redirect("/parent/tasks");
---

<Layout title={`${t(lang, "pt_edit_title")} - Family Task Manager`}>
    <div class="max-w-md mx-auto min-h-screen bg-slate-50 flex flex-col pb-24">
        <header
            class="bg-gradient-to-br from-primary-700 to-primary-600 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md"
        >
            <a
                href="/parent/tasks"
                class="text-primary-200 text-sm flex items-center gap-1 mb-3"
            >
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                {t(lang, "back_all_tasks")}
            </a>
            <h1 class="text-2xl font-bold">{t(lang, "pt_edit_title")}</h1>
        </header>
        <main class="flex-1 px-4 py-6">
            {errorMsg && (
                <div class="mb-4 p-3 bg-red-50 border border-red-200 text-red-700 text-sm rounded-xl">
                    {errorMsg}
                </div>
            )}
            <form
                method="POST"
                class="bg-white rounded-2xl p-5 shadow-sm border border-slate-100 space-y-4"
            >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="space-y-3">
                        <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-wider">English</h3>
                        <div>
                            <label class="text-xs font-medium text-slate-700 mb-1 block">
                                {t(lang, "pt_task_title")}
                            </label>
                            <input
                                name="title"
                                required
                                value={tmpl.title}
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none"
                            />
                        </div>
                        <div>
                            <label class="text-xs font-medium text-slate-700 mb-1 block">
                                {t(lang, "pt_description")}
                            </label>
                            <textarea
                                name="description"
                                rows={3}
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none resize-none"
                            >{tmpl.description}</textarea>
                        </div>
                    </div>
                    
                    <div class="space-y-3 relative">
                        <div class="flex items-center justify-between">
                            <h3 class="text-xs font-semibold text-slate-500 uppercase tracking-wider">Espa√±ol</h3>
                            <button
                                type="button"
                                id="btn-translate"
                                data-id={id}
                                data-token={token}
                                class="text-xs bg-indigo-50 text-indigo-600 px-2 py-1 rounded hover:bg-indigo-100 transition-colors flex items-center gap-1"
                            >
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path></svg>
                                {t(lang, "translation_auto_translate")}
                            </button>
                        </div>
                        <div>
                            <label class="text-xs font-medium text-slate-700 mb-1 block">
                                {t(lang, "translation_title_es")}
                            </label>
                            <input
                                name="title_es"
                                id="input-title-es"
                                value={tmpl.title_es || ""}
                                placeholder={t(lang, "translation_title_es")}
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none"
                            />
                        </div>
                        <div>
                            <label class="text-xs font-medium text-slate-700 mb-1 block">
                                {t(lang, "translation_desc_es")}
                            </label>
                            <textarea
                                name="description_es"
                                id="input-desc-es"
                                rows={3}
                                placeholder={t(lang, "translation_desc_es")}
                                class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none resize-none"
                            >{tmpl.description_es || ""}</textarea>
                        </div>
                        <div id="translate-status" class="text-xs text-center hidden"></div>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-3 pt-2 border-t border-slate-100">
                    <div>
                        <label class="text-sm font-medium text-slate-700 mb-1 block">
                            {t(lang, "pt_points")}
                        </label>
                        <input
                            type="number"
                            name="points"
                            min={1}
                            max={1000}
                            value={tmpl.points}
                            class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none"
                        />
                    </div>
                    <div>
                        <label class="text-sm font-medium text-slate-700 mb-1 block">
                            {t(lang, "pt_interval")}
                        </label>
                        <select
                            name="interval_days"
                            class="w-full px-3 py-2.5 rounded-lg border border-slate-300 text-sm focus:ring-2 focus:ring-primary-500 outline-none bg-white"
                        >
                            <option value="1" selected={tmpl.interval_days === 1}>
                                {t(lang, "pt_interval_daily")}
                            </option>
                            <option value="3" selected={tmpl.interval_days === 3}>
                                {t(lang, "pt_interval_every3")}
                            </option>
                            <option value="7" selected={tmpl.interval_days === 7}>
                                {t(lang, "pt_interval_weekly")}
                            </option>
                        </select>
                    </div>
                </div>
                <div class="flex items-center gap-3 py-1">
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input
                            type="checkbox"
                            name="is_bonus"
                            class="sr-only peer"
                            checked={tmpl.is_bonus}
                        />
                        <div class="w-9 h-5 bg-slate-200 rounded-full peer peer-checked:bg-amber-500 peer-focus:ring-2 peer-focus:ring-amber-300 transition-colors after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:after:translate-x-full"></div>
                    </label>
                    <div>
                        <span class="text-sm font-medium text-slate-700">{t(lang, "pt_is_bonus")}</span>
                        <p class="text-xs text-slate-400">{t(lang, "pt_is_bonus_hint")}</p>
                    </div>
                </div>
                <button
                    type="submit"
                    class="w-full py-2.5 bg-primary-600 hover:bg-primary-700 text-white font-semibold text-sm rounded-lg transition-colors shadow-sm"
                >
                    {t(lang, "pt_save")}
                </button>
            </form>
        </main>
        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>
</Layout>

<script>
    const btnTranslate = document.getElementById("btn-translate");
    const statusDiv = document.getElementById("translate-status");
    const titleInput = document.getElementById("input-title-es") as HTMLInputElement;
    const descInput = document.getElementById("input-desc-es") as HTMLTextAreaElement;

    if (btnTranslate) {
        btnTranslate.addEventListener("click", async () => {
            const id = btnTranslate.dataset.id;
            if (!id) return;

            // Show loading
            if (statusDiv) {
                statusDiv.textContent = "Translating...";
                statusDiv.classList.remove("hidden", "text-green-600", "text-red-600");
                statusDiv.classList.add("text-slate-500");
            }
            btnTranslate.setAttribute("disabled", "true");
            btnTranslate.classList.add("opacity-50", "cursor-not-allowed");

            try {
                const res = await fetch(`/api/translate/${id}`, {
                    method: "POST",
                });
                
                if (!res.ok) throw new Error("Translation failed");
                
                const data = await res.json();
                
                if (data.title_es) titleInput.value = data.title_es;
                if (data.description_es) descInput.value = data.description_es;

                if (statusDiv) {
                    statusDiv.textContent = "Translation complete!";
                    statusDiv.classList.remove("text-slate-500");
                    statusDiv.classList.add("text-green-600");
                }
            } catch (err) {
                console.error(err);
                if (statusDiv) {
                    statusDiv.textContent = "Error translating. Please try again.";
                    statusDiv.classList.remove("text-slate-500");
                    statusDiv.classList.add("text-red-600");
                }
            } finally {
                btnTranslate.removeAttribute("disabled");
                btnTranslate.classList.remove("opacity-50", "cursor-not-allowed");
                
                // Clear status after 3s
                setTimeout(() => {
                    if (statusDiv) statusDiv.classList.add("hidden");
                }, 3000);
            }
        });
    }
</script>
