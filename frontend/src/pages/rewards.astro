---
import Layout from "../layouts/Layout.astro";
import BottomNav from "../components/BottomNav.astro";
import { apiFetch } from "../lib/api";
import { t } from "../lib/i18n";

const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");
const lang = Astro.cookies.get("lang")?.value ?? "en";

if (Astro.request.method === "POST") {
    const data = await Astro.request.formData();
    const rewardId = data.get("reward_id");
    if (rewardId) {
        const { ok, error } = await apiFetch(
            `/api/rewards/${rewardId}/redeem`,
            { method: "POST", token },
        );
        if (ok) {
            Astro.cookies.set("flash", t(lang, "rewards_redeemed_flash"), {
                path: "/",
                maxAge: 5,
            });
        } else {
            Astro.cookies.set("flash_error", error || "Error", {
                path: "/",
                maxAge: 5,
            });
        }
    }
    return Astro.redirect("/rewards");
}

const [{ data: user }, { data: rewardsRaw }] = await Promise.all([
    apiFetch<any>("/api/auth/me", { token }),
    apiFetch<any[]>("/api/rewards", { token }),
]);
if (!user) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}
const rewards: any[] = Array.isArray(rewardsRaw) ? rewardsRaw : [];

const flash = Astro.cookies.get("flash")?.value;
const flashError = Astro.cookies.get("flash_error")?.value;
if (flash) Astro.cookies.delete("flash", { path: "/" });
if (flashError) Astro.cookies.delete("flash_error", { path: "/" });
---

<Layout title={`${t(lang, "rewards_title")} - Family Task Manager`}>
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto min-h-screen bg-slate-50 flex flex-col pb-40">
        <header
            class="bg-gradient-to-br from-amber-500 to-orange-500 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md"
        >
            <h1 class="text-2xl font-bold mb-1">{t(lang, "rewards_title")}</h1>
            <p class="text-amber-100 text-sm mb-5">
                {t(lang, "rewards_subtitle")}
            </p>
            <div
                class="bg-white/20 backdrop-blur-md rounded-2xl p-4 flex items-center gap-4 border border-white/30"
            >
                <div class="bg-yellow-400 p-3 rounded-xl">
                    <svg
                        class="h-7 w-7 text-yellow-800"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
                        ></path>
                    </svg>
                </div>
                <div>
                    <p
                        class="text-amber-100 text-xs font-semibold uppercase tracking-wider"
                    >
                        {t(lang, "rewards_available_points")}
                    </p>
                    <p class="text-3xl font-extrabold">{user.points}</p>
                </div>
            </div>
        </header>

        <main class="flex-1 px-4 py-6">
            {
                flash && (
                    <div class="mb-4 p-3 bg-green-50 border border-green-200 text-green-700 text-sm rounded-xl">
                        {flash}
                    </div>
                )
            }
            {
                flashError && (
                    <div class="mb-4 p-3 bg-red-50 border border-red-200 text-red-700 text-sm rounded-xl">
                        {flashError}
                    </div>
                )
            }

            {
                rewards.length === 0 ? (
                    <div class="bg-white rounded-2xl p-8 text-center border border-slate-100 shadow-sm mt-4">
                        <div class="w-16 h-16 bg-amber-50 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg
                                class="w-8 h-8 text-amber-400"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"
                                />
                            </svg>
                        </div>
                        <h3 class="text-lg font-bold text-slate-700">
                            {t(lang, "rewards_empty_title")}
                        </h3>
                        <p class="text-slate-500 mt-1 text-sm">
                            {t(lang, "rewards_empty_subtitle")}
                        </p>
                    </div>
                ) : (
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {rewards.map((reward: any) => {
                            const canAfford = user.points >= reward.points_cost;
                            return (
                                <div
                                    class={`bg-white rounded-2xl p-5 shadow-sm border transition-all ${canAfford ? "border-slate-100 hover:shadow-md" : "border-slate-100 opacity-60"}`}
                                >
                                    <div class="flex justify-between items-start mb-3">
                                        <div class="flex-1 pr-3">
                                            <h3 class="font-bold text-slate-800 text-lg mb-1">
                                                {reward.name}
                                            </h3>
                                            {reward.description && (
                                                <p class="text-slate-500 text-sm line-clamp-2">
                                                    {reward.description}
                                                </p>
                                            )}
                                            {reward.category && (
                                                <span class="inline-block mt-2 px-2 py-0.5 text-xs rounded-full bg-slate-100 text-slate-600 font-medium">
                                                    {reward.category}
                                                </span>
                                            )}
                                        </div>
                                        <div class="flex flex-col items-center bg-amber-50 rounded-xl px-3 py-2 flex-shrink-0">
                                            <span class="text-amber-600 text-xs font-semibold">
                                                {t(lang, "rewards_cost")}
                                            </span>
                                            <span class="text-amber-700 text-xl font-extrabold">
                                                {reward.points_cost}
                                            </span>
                                            <span class="text-amber-500 text-xs">
                                                {t(lang, "rewards_pts")}
                                            </span>
                                        </div>
                                    </div>
                                    <form method="POST">
                                        <input
                                            type="hidden"
                                            name="reward_id"
                                            value={reward.id}
                                        />
                                        <button
                                            type="submit"
                                            disabled={!canAfford}
                                            class={`w-full py-2.5 rounded-xl text-sm font-semibold transition-colors ${canAfford ? "bg-amber-500 hover:bg-amber-600 text-white shadow-sm active:scale-95" : "bg-slate-100 text-slate-400 cursor-not-allowed"}`}
                                        >
                                            {canAfford
                                                ? t(lang, "rewards_redeem")
                                                : t(lang, "rewards_not_enough")}
                                        </button>
                                    </form>
                                </div>
                            );
                        })}
                    </div>
                )
            }
        </main>

        <BottomNav active="rewards" role={user.role} lang={lang} />
    </div>
</Layout>
