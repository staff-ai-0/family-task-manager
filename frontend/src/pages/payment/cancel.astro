---
import Layout from "../../layouts/Layout.astro";

const lang = Astro.cookies.get("lang")?.value ?? "en";
---

<Layout title="Payment Cancelled - Family Task Manager">
    <main class=" bg-gradient-to-br from-slate-50 to-slate-100 flex items-center justify-center px-4">
        <div class="max-w-2xl w-full bg-white rounded-2xl shadow-xl p-8">
            <div class="text-center">
                <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-yellow-100 mb-6">
                    <svg
                        class="h-10 w-10 text-yellow-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                        ></path>
                    </svg>
                </div>
                
                <h1 class="text-3xl font-bold text-slate-900 mb-4">
                    Payment Cancelled
                </h1>
                
                <p class="text-lg text-slate-600 mb-8">
                    You cancelled the payment process. No charges were made to your account.
                </p>

                <div class="bg-slate-50 rounded-lg p-6 mb-8">
                    <p class="text-slate-700">
                        If you encountered any issues or have questions about our pricing,
                        please don't hesitate to <a href="/contact" class="text-primary-600 hover:text-primary-700 font-medium">contact us</a>.
                    </p>
                </div>

                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="/payment"
                        class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-primary-600 hover:bg-primary-700 text-white font-medium transition-colors shadow-sm"
                    >
                        Try Again
                    </a>
                    <a
                        href="/dashboard"
                        class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-slate-200 hover:bg-slate-300 text-slate-700 font-medium transition-colors"
                    >
                        Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>
