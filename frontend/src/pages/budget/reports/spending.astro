---
/**
 * Spending Report Page
 * Analyze spending by category, group, month, or payee
 */

import Layout from "@layouts/Layout.astro";
import BottomNav from "@components/BottomNav.astro";
import BudgetNav from "@components/BudgetNav.astro";
import { apiFetch } from "@lib/api";
import { getSpendingReport, formatCurrency, formatDate } from "@lib/api/budget";
import { t } from "@lib/i18n";

// Authentication check
const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");

const lang = Astro.cookies.get("lang")?.value ?? "en";

// Get user info
const { data: user, ok: userOk } = await apiFetch<any>("/api/auth/me", { token });
if (!userOk) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}

// Only parents can view reports
if (user.role !== "parent") {
    return Astro.redirect("/dashboard");
}

// Get current month for default filter
const now = new Date();
const year = now.getFullYear();
const month = now.getMonth() + 1;
const startOfMonth = `${year}-${String(month).padStart(2, '0')}-01`;
const endOfMonth = new Date(year, month, 0);
const endDate = `${year}-${String(month).padStart(2, '0')}-${String(endOfMonth.getDate()).padStart(2, '0')}`;

// Get query parameters
const url = new URL(Astro.request.url);
const startDateParam = url.searchParams.get("start_date") || startOfMonth;
const endDateParam = url.searchParams.get("end_date") || endDate;
const groupByParam = (url.searchParams.get("group_by") || "category") as "category" | "group" | "month" | "payee";

// Fetch spending report
const { data: report, ok: reportOk, error } = await getSpendingReport(
    token,
    startDateParam,
    endDateParam,
    groupByParam
);

// Calculate totals
const totalSpent = report?.items?.reduce((sum: number, item: any) => sum + Math.abs(item.total), 0) || 0;
const totalTransactions = report?.items?.reduce((sum: number, item: any) => sum + item.count, 0) || 0;

// Group by labels
const groupByLabels: Record<string, string> = {
    category: "Categoría",
    group: "Grupo",
    month: "Mes",
    payee: "Beneficiario",
};
---

<Layout title="Reporte de Gastos - Presupuesto">
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto min-h-screen bg-slate-50 flex flex-col pb-24">
        <!-- Header -->
        <header class="bg-red-600 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md">
            <div class="flex items-center justify-between mb-6">
                <a href="/budget" class="text-white hover:text-red-100 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
                <h1 class="text-2xl font-bold">Reporte de Gastos</h1>
                <div class="w-6"></div>
            </div>

            <!-- Summary -->
            <div class="bg-white/20 backdrop-blur-md rounded-2xl p-4 border border-white/30">
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <p class="text-red-50 text-xs font-semibold uppercase tracking-wider mb-1">
                            Total Gastado
                        </p>
                        <p class="text-2xl font-bold text-white">
                            {formatCurrency(totalSpent)}
                        </p>
                    </div>
                    <div>
                        <p class="text-red-50 text-xs font-semibold uppercase tracking-wider mb-1">
                            Transacciones
                        </p>
                        <p class="text-2xl font-bold text-white">
                            {totalTransactions}
                        </p>
                    </div>
                </div>
            </div>
        </header>

        <BudgetNav active="reports" />

        <!-- Reports Sub-Nav -->
        <div class="px-6 pt-4 pb-0">
            <div class="flex rounded-xl overflow-hidden border border-slate-200 bg-white shadow-sm">
                <a href="/budget/reports/spending" class="flex-1 py-2 text-sm font-semibold text-center bg-red-600 text-white transition">
                    {t(lang, 'fin_report_spending')}
                </a>
                <a href="/budget/reports/income-vs-expense" class="flex-1 py-2 text-sm font-semibold text-center text-slate-600 hover:bg-slate-50 transition">
                    {t(lang, 'fin_report_cashflow')}
                </a>
                <a href="/budget/reports/net-worth" class="flex-1 py-2 text-sm font-semibold text-center text-slate-600 hover:bg-slate-50 transition">
                    {t(lang, 'fin_report_net_worth')}
                </a>
            </div>
        </div>

        <!-- Filters -->
        <div class="px-6 py-4">
            <form method="GET" class="bg-white rounded-xl shadow-sm p-4 space-y-3">
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <label for="start_date" class="block text-xs font-semibold text-slate-700 mb-1">
                            Fecha Inicio
                        </label>
                        <input
                            type="date"
                            id="start_date"
                            name="start_date"
                            value={startDateParam}
                            class="w-full px-3 py-2 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
                        />
                    </div>
                    <div>
                        <label for="end_date" class="block text-xs font-semibold text-slate-700 mb-1">
                            Fecha Fin
                        </label>
                        <input
                            type="date"
                            id="end_date"
                            name="end_date"
                            value={endDateParam}
                            class="w-full px-3 py-2 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
                        />
                    </div>
                </div>
                <div>
                    <label for="group_by" class="block text-xs font-semibold text-slate-700 mb-1">
                        Agrupar Por
                    </label>
                    <select
                        id="group_by"
                        name="group_by"
                        class="w-full px-3 py-2 text-sm border border-slate-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500"
                    >
                        <option value="category" selected={groupByParam === "category"}>Categoría</option>
                        <option value="group" selected={groupByParam === "group"}>Grupo</option>
                        <option value="month" selected={groupByParam === "month"}>Mes</option>
                        <option value="payee" selected={groupByParam === "payee"}>Beneficiario</option>
                    </select>
                </div>
                <button
                    type="submit"
                    class="w-full bg-red-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-red-700 transition"
                >
                    Aplicar Filtros
                </button>
            </form>
        </div>

        <!-- Report Data -->
        <main class="px-6 pb-6 flex-grow">
            {!reportOk ? (
                <div class="bg-red-50 border border-red-200 rounded-xl p-4 text-red-700">
                    <p class="font-semibold">Error al cargar reporte</p>
                    <p class="text-sm">{error || "Error desconocido"}</p>
                </div>
            ) : !report?.items || report.items.length === 0 ? (
                <div class="bg-slate-100 border border-slate-200 rounded-xl p-8 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-slate-400 mx-auto mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    <p class="text-slate-600 font-medium">No hay datos</p>
                    <p class="text-sm text-slate-500 mt-1">No se encontraron gastos en este período</p>
                </div>
            ) : (
                <div class="space-y-2">
                    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                        <div class="bg-slate-100 px-4 py-2 border-b border-slate-200">
                            <div class="grid grid-cols-3 gap-2 text-xs font-bold text-slate-600 uppercase">
                                <div>{groupByLabels[groupByParam]}</div>
                                <div class="text-right">Cantidad</div>
                                <div class="text-right">Transacciones</div>
                            </div>
                        </div>
                        <div class="divide-y divide-slate-100">
                            {report.items.map((item: any, index: number) => {
                                const percentage = totalSpent > 0 ? (Math.abs(item.total) / totalSpent) * 100 : 0;
                                
                                return (
                                    <div class="px-4 py-3 hover:bg-slate-50 transition">
                                        <div class="grid grid-cols-3 gap-2 items-center mb-2">
                                            <div class="font-medium text-slate-700 text-sm truncate">
                                                {item.name || "Sin especificar"}
                                            </div>
                                            <div class="text-right font-bold text-red-600">
                                                {formatCurrency(Math.abs(item.total))}
                                            </div>
                                            <div class="text-right text-sm text-slate-600">
                                                {item.count}
                                            </div>
                                        </div>
                                        <div class="flex items-center gap-2">
                                            <div class="flex-1 bg-slate-200 rounded-full h-2 overflow-hidden">
                                                <div 
                                                    class="h-full bg-red-500 transition-all"
                                                    style={`width: ${percentage}%`}
                                                ></div>
                                            </div>
                                            <span class="text-xs font-semibold text-slate-600 w-12 text-right">
                                                {percentage.toFixed(1)}%
                                            </span>
                                        </div>
                                    </div>
                                );
                            })}
                        </div>
                    </div>

                    <!-- Period Summary -->
                    <div class="bg-slate-700 text-white rounded-xl p-4 mt-4">
                        <p class="text-slate-300 text-xs font-semibold uppercase tracking-wider mb-2">
                            Período: {formatDate(startDateParam, lang)} - {formatDate(endDateParam, lang)}
                        </p>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <p class="text-slate-300 text-xs mb-1">Promedio por Transacción</p>
                                <p class="text-xl font-bold">
                                    {totalTransactions > 0 ? formatCurrency(Math.floor(totalSpent / totalTransactions)) : formatCurrency(0)}
                                </p>
                            </div>
                            <div>
                                <p class="text-slate-300 text-xs mb-1">Total de Items</p>
                                <p class="text-xl font-bold">
                                    {report.items.length}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            )}
        </main>

        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>
</Layout>
