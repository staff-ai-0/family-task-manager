---
/**
 * Monthly Budget View Page
 * Shows budget allocations, spending, and available amounts for a specific month
 */

import Layout from "../../../../layouts/Layout.astro";
import BottomNav from "../../../../components/BottomNav.astro";
import BudgetNav from "../../../../components/BudgetNav.astro";
import { apiFetch } from "../../../../lib/api";
import { getMonthBudget, formatCurrency, getMonthName } from "../../../../lib/api/budget";
import type { MonthBudgetView } from "../../../../lib/api/budget";

// Authentication check
const token = Astro.cookies.get("access_token")?.value;
if (!token) return Astro.redirect("/login");

const lang = Astro.cookies.get("lang")?.value ?? "en";

// Get user info
const { data: user, ok: userOk } = await apiFetch<any>("/api/auth/me", { token });
if (!userOk) {
    Astro.cookies.delete("access_token", { path: "/" });
    return Astro.redirect("/login");
}

// Only parents can view budget
if (user.role !== "parent") {
    return Astro.redirect("/dashboard");
}

// Get month parameters from URL
const { year, month } = Astro.params;
const yearNum = parseInt(year || "0");
const monthNum = parseInt(month || "0");

// Validate parameters
if (isNaN(yearNum) || isNaN(monthNum) || monthNum < 1 || monthNum > 12) {
    return Astro.redirect("/budget");
}

// Fetch budget data
const { data: budget, ok: budgetOk, error } = await getMonthBudget(token, yearNum, monthNum);

if (!budgetOk || !budget) {
    console.error("Failed to fetch budget:", error);
}

const monthName = getMonthName(monthNum, lang);

// Calculate total income and expenses
const incomeGroups = budget?.category_groups.filter(g => g.is_income) || [];
const expenseGroups = budget?.category_groups.filter(g => !g.is_income) || [];

const totalIncome = incomeGroups.reduce((sum, g) => sum + g.total_activity, 0);
const totalBudgeted = expenseGroups.reduce((sum, g) => sum + g.total_budgeted, 0);
const totalSpent = Math.abs(expenseGroups.reduce((sum, g) => sum + g.total_activity, 0));
// Use backend calculated ready_to_assign if available, otherwise fall back to local calculation
const readyToAssign = budget?.ready_to_assign !== undefined ? budget.ready_to_assign : (totalIncome - totalBudgeted);

// Navigation helpers
const prevMonth = monthNum === 1 ? 12 : monthNum - 1;
const prevYear = monthNum === 1 ? yearNum - 1 : yearNum;
const nextMonth = monthNum === 12 ? 1 : monthNum + 1;
const nextYear = monthNum === 12 ? yearNum + 1 : yearNum;

const now = new Date();
const isCurrentMonth = yearNum === now.getFullYear() && monthNum === now.getMonth() + 1;
---

<Layout title={`${monthName} ${yearNum} - Presupuesto`}>
    <div class="w-full max-w-md md:max-w-4xl lg:max-w-6xl mx-auto min-h-screen bg-slate-50 flex flex-col pb-24">
        <!-- Header -->
        <header class="bg-primary-600 text-white pt-12 pb-6 px-6 rounded-b-3xl shadow-md">
            <div class="flex items-center justify-between mb-6">
                <a href="/dashboard" class="text-white hover:text-primary-100 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
                <h1 class="text-2xl font-bold">Presupuesto</h1>
                <div class="w-6"></div>
            </div>

            <!-- Month Navigation -->
            <div class="bg-white/20 backdrop-blur-md rounded-2xl p-4 border border-white/30">
                <div class="flex items-center justify-between mb-4">
                    <a href={`/budget/month/${prevYear}/${prevMonth}`} class="text-white hover:text-primary-100 transition p-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                    </a>
                    <div class="text-center">
                        <p class="text-primary-50 text-xs font-semibold uppercase tracking-wider mb-1">
                            {monthName} {yearNum}
                        </p>
                        {isCurrentMonth && (
                            <span class="inline-block bg-yellow-400 text-yellow-900 text-xs font-bold px-2 py-1 rounded-full">
                                Mes Actual
                            </span>
                        )}
                    </div>
                    <a href={`/budget/month/${nextYear}/${nextMonth}`} class="text-white hover:text-primary-100 transition p-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>

                <!-- To Budget Amount (Ready to Assign) -->
                <div class="bg-white/30 rounded-xl p-4">
                    <p class="text-primary-50 text-xs font-semibold uppercase tracking-wider mb-1">
                        Por Presupuestar (Ready to Assign)
                    </p>
                    <p class={`text-3xl font-extrabold tracking-tight ${readyToAssign < 0 ? 'text-red-300' : 'text-white'}`}>
                        {formatCurrency(readyToAssign)}
                    </p>
                </div>
            </div>
        </header>

        <!-- Budget Section Nav -->
        <BudgetNav active="month" year={yearNum} month={monthNum} />

        <!-- Summary Cards -->
        <div class="px-6 py-4 grid grid-cols-3 gap-3">
            <div class="bg-white rounded-xl p-4 shadow-sm">
                <p class="text-xs text-slate-500 font-semibold mb-1">Ingresos</p>
                <p class="text-lg font-bold text-green-600">{formatCurrency(totalIncome)}</p>
            </div>
            <div class="bg-white rounded-xl p-4 shadow-sm">
                <p class="text-xs text-slate-500 font-semibold mb-1">Presupuestado</p>
                <p class="text-lg font-bold text-blue-600">{formatCurrency(totalBudgeted)}</p>
            </div>
            <div class="bg-white rounded-xl p-4 shadow-sm">
                <p class="text-xs text-slate-500 font-semibold mb-1">Gastado</p>
                <p class="text-lg font-bold text-red-600">{formatCurrency(totalSpent)}</p>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="px-6 pb-4 flex gap-3">
            <a
                href="/budget/transactions/new"
                class="flex-1 bg-primary-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-primary-700 transition text-center text-sm flex items-center justify-center gap-2"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Nueva Transacción
            </a>
            <a
                href="/budget/transactions"
                class="flex-1 bg-slate-600 text-white px-4 py-2 rounded-lg font-semibold hover:bg-slate-700 transition text-center text-sm flex items-center justify-center gap-2"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                Ver Todas
            </a>
        </div>

        <!-- Budget Categories -->
        <main class="px-6 pb-6 flex-grow">
            {!budgetOk ? (
                <div class="bg-red-50 border border-red-200 rounded-xl p-4 text-red-700">
                    <p class="font-semibold">Error al cargar presupuesto</p>
                    <p class="text-sm">{error || "Error desconocido"}</p>
                </div>
            ) : (
                <div class="space-y-4">
                    {/* Income Section */}
                    {incomeGroups.length > 0 && (
                        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                            <div class="bg-green-50 px-4 py-3 border-b border-green-100">
                                <h2 class="font-bold text-green-800 text-sm uppercase tracking-wide">Ingresos</h2>
                            </div>
                            {incomeGroups.map(group => (
                                <div class="divide-y divide-slate-100">
                                    {group.categories.map(category => (
                                        <div class="px-4 py-3 hover:bg-slate-50 transition">
                                            <div class="flex items-center justify-between">
                                                <span class="text-sm font-medium text-slate-700">{category.name}</span>
                                                <span class="text-sm font-bold text-green-600">
                                                    {formatCurrency(category.activity)}
                                                </span>
                                            </div>
                                        </div>
                                    ))}
                                </div>
                            ))}
                        </div>
                    )}

                    {/* Expense Groups */}
                    {expenseGroups.map(group => (
                        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                            <div class="bg-slate-100 px-4 py-3 border-b border-slate-200">
                                <div class="flex items-center justify-between">
                                    <h2 class="font-bold text-slate-800 text-sm uppercase tracking-wide">
                                        {group.name}
                                    </h2>
                                    <div class="flex items-center gap-2">
                                        <span class="text-xs font-semibold text-slate-600">
                                            {formatCurrency(group.total_available)} disponible
                                        </span>
                                        <button
                                            class="quick-add-btn text-slate-600 hover:text-primary-600 transition p-1"
                                            data-group-id={group.id}
                                            data-group-name={group.name}
                                            title="Agregar categoría"
                                        >
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="divide-y divide-slate-100">
                                {group.categories.map(category => {
                                    const percentUsed = category.budgeted > 0 
                                        ? Math.abs((category.activity / category.budgeted) * 100)
                                        : 0;
                                    const isOverBudget = category.available < 0;
                                    
                                    return (
                                        <div 
                                            class="px-4 py-3 hover:bg-slate-50 transition category-row"
                                            data-category-id={category.id}
                                            data-category-name={category.name}
                                            data-budgeted={category.budgeted}
                                            data-activity={category.activity}
                                            data-available={category.available}
                                            data-previous-balance={category.previous_balance || 0}
                                        >
                                         <div class="flex items-center justify-between mb-2">
                                                 <span class="text-sm font-medium text-slate-700">{category.name}</span>
                                                 <span class={`text-sm font-bold ${isOverBudget ? 'text-red-600' : category.available > 0 ? 'text-green-600' : 'text-slate-900'}`}>
                                                     {formatCurrency(category.available)}
                                                 </span>
                                             </div>
                                             <div class="text-xs text-slate-500 mb-2">
                                                 {category.previous_balance > 0 && (
                                                     <span class="text-green-600 font-semibold">
                                                         {formatCurrency(category.previous_balance)} saldo anterior
                                                     </span>
                                                 )}
                                             </div>
                                             <div class="flex items-center justify-between text-xs text-slate-500">
                                                 <button 
                                                     class="budgeted-btn hover:bg-primary-100 px-2 py-1 rounded transition text-left group"
                                                     data-category-id={category.id}
                                                     data-amount={category.budgeted}
                                                 >
                                                     <span class="budgeted-display">
                                                         {formatCurrency(category.budgeted)} presupuestado
                                                     </span>
                                                     <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline-block ml-1 opacity-0 group-hover:opacity-100 transition" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                                     </svg>
                                                 </button>
                                                 <span>{formatCurrency(Math.abs(category.activity))} gastado</span>
                                             </div>
                                            {category.budgeted > 0 && (
                                                <div class="mt-2 bg-slate-200 rounded-full h-1.5 overflow-hidden">
                                                    <div 
                                                        class={`h-full transition-all progress-bar ${isOverBudget ? 'bg-red-500' : 'bg-blue-500'}`}
                                                        style={`width: ${Math.min(percentUsed, 100)}%`}
                                                    ></div>
                                                </div>
                                            )}
                                        </div>
                                    );
                                })}
                            </div>
                        </div>
                    ))}

                    {expenseGroups.length === 0 && incomeGroups.length === 0 && (
                        <div class="bg-slate-100 border border-slate-200 rounded-xl p-8 text-center">
                            <p class="text-slate-600 font-medium">No hay categorías configuradas</p>
                            <p class="text-sm text-slate-500 mt-1">Contacta al administrador para crear categorías</p>
                        </div>
                    )}
                </div>
            )}
        </main>

        <BottomNav active="parent" role={user.role} lang={lang} />
    </div>

    <!-- Edit Budget Modal -->
    <div id="edit-modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-6">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full">
            <div class="bg-primary-600 text-white px-6 py-4 rounded-t-2xl">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold">Editar Presupuesto</h2>
                    <button id="close-modal" class="text-white hover:text-primary-100 transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="p-6">
                <p id="modal-category-name" class="text-sm text-slate-600 mb-4"></p>
                
                <div class="space-y-4">
                    <div>
                        <label for="budget-amount" class="block text-sm font-semibold text-slate-700 mb-2">
                            Cantidad Presupuestada (MXN)
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-500 font-medium">$</span>
                            <input
                                type="number"
                                id="budget-amount"
                                step="0.01"
                                min="0"
                                placeholder="0.00"
                                class="w-full pl-8 pr-4 py-3 border-2 border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-lg"
                            />
                        </div>
                    </div>

                    <div class="bg-slate-50 rounded-lg p-4 space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-slate-600">Saldo Anterior:</span>
                            <span id="modal-previous-balance" class="font-semibold text-green-600">$0</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-600">Presupuestado:</span>
                            <span id="modal-budgeted" class="font-semibold text-slate-900">$0</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-600">Gastado:</span>
                            <span id="modal-activity" class="font-semibold text-slate-900">$0</span>
                        </div>
                        <div class="border-t border-slate-200 pt-2 flex justify-between">
                            <span class="text-slate-700 font-semibold">Disponible:</span>
                            <span id="modal-available" class="font-bold text-lg">$0</span>
                        </div>
                    </div>
                </div>

                <div class="flex gap-3 mt-6">
                    <button
                        id="cancel-btn"
                        class="flex-1 bg-slate-200 text-slate-700 px-6 py-3 rounded-lg font-semibold hover:bg-slate-300 transition"
                    >
                        Cancelar
                    </button>
                    <button
                        id="save-btn"
                        class="flex-1 bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition"
                    >
                        Guardar
                    </button>
                </div>

                <div id="modal-error" class="hidden mt-4 bg-red-50 border border-red-200 rounded-lg p-3 text-red-700 text-sm"></div>
                <div id="modal-loading" class="hidden mt-4 text-center">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create Category Modal -->
    <div id="create-category-modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-6">
        <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full">
            <div class="bg-primary-600 text-white px-6 py-4 rounded-t-2xl">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold">Nueva Categoría</h2>
                    <button id="close-create-modal" class="text-white hover:text-primary-100 transition">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="p-6">
                <p id="create-modal-group-name" class="text-sm text-slate-600 mb-4"></p>
                
                <div class="space-y-4">
                    <div>
                        <label for="category-name" class="block text-sm font-semibold text-slate-700 mb-2">
                            Nombre de la Categoría
                        </label>
                        <input
                            type="text"
                            id="category-name"
                            placeholder="ej. Comida"
                            class="w-full px-4 py-3 border-2 border-slate-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                        />
                    </div>

                    <div class="bg-slate-50 rounded-lg p-3 text-sm text-slate-600">
                        <p>La categoría se agregará a <span id="create-modal-group-display" class="font-semibold text-slate-900"></span></p>
                    </div>
                </div>

                <div class="flex gap-3 mt-6">
                    <button
                        id="cancel-create-btn"
                        class="flex-1 bg-slate-200 text-slate-700 px-6 py-3 rounded-lg font-semibold hover:bg-slate-300 transition"
                    >
                        Cancelar
                    </button>
                    <button
                        id="create-btn"
                        class="flex-1 bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition"
                    >
                        Crear
                    </button>
                </div>

                <div id="create-modal-error" class="hidden mt-4 bg-red-50 border border-red-200 rounded-lg p-3 text-red-700 text-sm"></div>
                <div id="create-modal-loading" class="hidden mt-4 text-center">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script define:vars={{ yearNum, monthNum }}>
    // Budget editing functionality
    const modal = document.getElementById('edit-modal');
    const closeModalBtn = document.getElementById('close-modal');
    const cancelBtn = document.getElementById('cancel-btn');
    const saveBtn = document.getElementById('save-btn');
    const budgetInput = document.getElementById('budget-amount');
    const modalCategoryName = document.getElementById('modal-category-name');
    const modalBudgeted = document.getElementById('modal-budgeted');
    const modalActivity = document.getElementById('modal-activity');
    const modalPreviousBalance = document.getElementById('modal-previous-balance');
    const modalAvailable = document.getElementById('modal-available');
    const modalError = document.getElementById('modal-error');
    const modalLoading = document.getElementById('modal-loading');

    // Category creation modal elements
    const createModal = document.getElementById('create-category-modal');
    const closeCreateModalBtn = document.getElementById('close-create-modal');
    const cancelCreateBtn = document.getElementById('cancel-create-btn');
    const createBtn = document.getElementById('create-btn');
    const categoryNameInput = document.getElementById('category-name');
    const createModalGroupName = document.getElementById('create-modal-group-name');
    const createModalGroupDisplay = document.getElementById('create-modal-group-display');
    const createModalError = document.getElementById('create-modal-error');
    const createModalLoading = document.getElementById('create-modal-loading');

    let currentCategoryId = null;
    let currentActivity = 0;
    let currentPreviousBalance = 0;
    let currentGroupId = null;
    let currentGroupName = null;

    // Format currency helper
    function formatCurrency(cents) {
        return new Intl.NumberFormat('es-MX', {
            style: 'currency',
            currency: 'MXN',
            minimumFractionDigits: 0,
            maximumFractionDigits: 0,
        }).format(cents / 100);
    }

    // Open edit budget modal
    function openModal(categoryId, categoryName, budgeted, activity, previousBalance = 0) {
        currentCategoryId = categoryId;
        currentActivity = activity;
        currentPreviousBalance = previousBalance || 0;
        
        modalCategoryName.textContent = categoryName;
        budgetInput.value = (budgeted / 100).toFixed(2);
        
        updateModalPreview(budgeted);
        
        modal.classList.remove('hidden');
        budgetInput.focus();
        budgetInput.select();
    }

    // Close edit budget modal
    function closeModal() {
        modal.classList.add('hidden');
        currentCategoryId = null;
        modalError.classList.add('hidden');
        modalLoading.classList.add('hidden');
    }

    // Open create category modal
    function openCreateModal(groupId, groupName) {
        currentGroupId = groupId;
        currentGroupName = groupName;
        
        createModalGroupName.textContent = `Nueva categoría en`;
        createModalGroupDisplay.textContent = groupName;
        categoryNameInput.value = '';
        createModalError.classList.add('hidden');
        createModalLoading.classList.add('hidden');
        
        createModal.classList.remove('hidden');
        categoryNameInput.focus();
    }

    // Close create category modal
    function closeCreateModal() {
        createModal.classList.add('hidden');
        currentGroupId = null;
        currentGroupName = null;
        createModalError.classList.add('hidden');
        createModalLoading.classList.add('hidden');
    }

    // Update preview
    function updateModalPreview(budgetedCents) {
        const available = currentPreviousBalance + budgetedCents + currentActivity;
        
        modalPreviousBalance.textContent = formatCurrency(currentPreviousBalance);
        modalBudgeted.textContent = formatCurrency(budgetedCents);
        modalActivity.textContent = formatCurrency(Math.abs(currentActivity));
        modalAvailable.textContent = formatCurrency(available);
        
        // Color code available
        if (available < 0) {
            modalAvailable.classList.add('text-red-600');
            modalAvailable.classList.remove('text-green-600', 'text-slate-900');
        } else if (available > 0) {
            modalAvailable.classList.add('text-green-600');
            modalAvailable.classList.remove('text-red-600', 'text-slate-900');
        } else {
            modalAvailable.classList.add('text-slate-900');
            modalAvailable.classList.remove('text-red-600', 'text-green-600');
        }
    }

    // Save budget allocation
    async function saveBudget() {
        const amountStr = budgetInput.value;
        const amountCents = Math.round(parseFloat(amountStr) * 100);

        if (isNaN(amountCents) || amountCents < 0) {
            modalError.textContent = 'Por favor ingresa una cantidad válida';
            modalError.classList.remove('hidden');
            return;
        }

        modalError.classList.add('hidden');
        modalLoading.classList.remove('hidden');
        saveBtn.disabled = true;

        try {
            const month = `${yearNum}-${String(monthNum).padStart(2, '0')}-01`;
            
            const response = await fetch('/api/budget/allocations/set', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${document.cookie.split('access_token=')[1]?.split(';')[0]}`
                },
                body: JSON.stringify({
                    category_id: currentCategoryId,
                    month: month,
                    amount: amountCents
                })
            });

            if (!response.ok) {
                throw new Error('Error al guardar presupuesto');
            }

            // Success! Reload page to show updated data
            window.location.reload();
        } catch (error) {
            modalError.textContent = error.message;
            modalError.classList.remove('hidden');
            modalLoading.classList.add('hidden');
            saveBtn.disabled = false;
        }
    }

    // Create new category
    async function createCategory() {
        const categoryName = categoryNameInput.value.trim();

        if (!categoryName) {
            createModalError.textContent = 'Por favor ingresa un nombre de categoría';
            createModalError.classList.remove('hidden');
            return;
        }

        createModalError.classList.add('hidden');
        createModalLoading.classList.remove('hidden');
        createBtn.disabled = true;

        try {
            const response = await fetch('/api/budget/categories/', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${document.cookie.split('access_token=')[1]?.split(';')[0]}`
                },
                body: JSON.stringify({
                    name: categoryName,
                    group_id: currentGroupId,
                    rollover_enabled: true,
                    sort_order: 0
                })
            });

            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.detail || 'Error al crear categoría');
            }

            // Success! Reload page to show updated data
            window.location.reload();
        } catch (error) {
            createModalError.textContent = error.message;
            createModalError.classList.remove('hidden');
            createModalLoading.classList.add('hidden');
            createBtn.disabled = false;
        }
    }

    // Event listeners for edit budget modal
    document.querySelectorAll('.budgeted-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            const categoryRow = btn.closest('.category-row');
            const categoryId = categoryRow.dataset.categoryId;
            const categoryName = categoryRow.dataset.categoryName;
            const budgeted = parseInt(categoryRow.dataset.budgeted);
            const activity = parseInt(categoryRow.dataset.activity);
            const previousBalance = parseInt(categoryRow.dataset.previousBalance || '0');
            
            openModal(categoryId, categoryName, budgeted, activity, previousBalance);
        });
    });

    // Event listeners for create category modal
    document.querySelectorAll('.quick-add-btn').forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            const groupId = btn.dataset.groupId;
            const groupName = btn.dataset.groupName;
            
            openCreateModal(groupId, groupName);
        });
    });

    closeModalBtn?.addEventListener('click', closeModal);
    cancelBtn?.addEventListener('click', closeModal);
    saveBtn?.addEventListener('click', saveBudget);

    closeCreateModalBtn?.addEventListener('click', closeCreateModal);
    cancelCreateBtn?.addEventListener('click', closeCreateModal);
    createBtn?.addEventListener('click', createCategory);

    // Update preview on input change
    budgetInput?.addEventListener('input', () => {
        const amountStr = budgetInput.value;
        const amountCents = Math.round(parseFloat(amountStr || '0') * 100);
        updateModalPreview(amountCents);
    });

    // Save on Enter key
    budgetInput?.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
            saveBudget();
        }
    });

    // Create on Enter key
    categoryNameInput?.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
            createCategory();
        }
    });

    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            if (!modal.classList.contains('hidden')) {
                closeModal();
            }
            if (!createModal.classList.contains('hidden')) {
                closeCreateModal();
            }
        }
    });

    // Close modal on backdrop click
    modal?.addEventListener('click', (e) => {
        if (e.target === modal) {
            closeModal();
        }
    });

    createModal?.addEventListener('click', (e) => {
        if (e.target === createModal) {
            closeCreateModal();
        }
    });
</script>
